@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms
@using FacturasSRI.Application.Dtos
@using FacturasSRI.Application.Interfaces

@inject ICobroService CobroService

@if (IsVisible)
{
    <div class="modal fade show" tabindex="-1" style="display:block;" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Registrar Pago para Factura</h5>
                    <button type="button" class="btn-close" @onclick="() => CloseModal()"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">@errorMessage</div>
                    }
                    <EditForm Model="nuevoCobro" OnValidSubmit="HandleRegistrarPago">
                        <DataAnnotationsValidator />
                        <div class="mb-3">
                            <label class="form-label">Método de Pago</label>
                            <InputSelect @bind-Value="selectedMetodoDePago" class="form-control">
                                @foreach (var metodo in metodosDePago)
                                {
                                    <option value="@metodo">@metodo</option>
                                }
                            </InputSelect>
                        </div>

                        @if (selectedMetodoDePago == "Otro")
                        {
                            <div class="mb-3">
                                <label class="form-label">Especificar Otro Método de Pago</label>
                                <InputText @bind-Value="otroMetodoDePago" class="form-control" />
                            </div>
                        }

                        <div class="mb-3">
                            <label class="form-label">Referencia (Opcional)</label>
                            <InputText @bind-Value="nuevoCobro.Referencia" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="comprobante" class="form-label">Comprobante de Pago (PDF, PNG, JPG)</label>
                            <InputFile id="comprobante" class="form-control" OnChange="@OnInputFileChange" disabled="@isSubmitting" accept=".pdf,.png,.jpg,.jpeg" />
                             @if (!string.IsNullOrEmpty(fileValidationMessage))
                            {
                                <div class="text-danger small mt-1">@fileValidationMessage</div>
                            }
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="() => CloseModal()">Cancelar</button>
                            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    <span> Guardando...</span>
                                }
                                else
                                {
                                    <span>Guardar Pago</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public EventCallback<bool> IsVisibleChanged { get; set; }

    [Parameter]
    public Guid FacturaId { get; set; }
    
    [Parameter]
    public Guid UsuarioIdCreador { get; set; }

    [Parameter]
    public EventCallback OnPaymentRegistered { get; set; }

    private RegistrarCobroDto nuevoCobro = new();
    private string? errorMessage;
    private bool isSubmitting = false;
    private IBrowserFile? comprobanteFile;
    private string? fileValidationMessage;
    
    private List<string> metodosDePago = new() { "Efectivo", "Transferencia", "Cheque", "Tarjeta de Crédito/Débito", "Otro" };
    private string selectedMetodoDePago = "Efectivo";
    private string otroMetodoDePago = "";

    protected override void OnParametersSet()
    {
        if (FacturaId != Guid.Empty)
        {
            nuevoCobro = new RegistrarCobroDto
            {
                FacturaId = this.FacturaId,
                UsuarioIdCreador = this.UsuarioIdCreador
            };
            // Reset fields
            comprobanteFile = null;
            errorMessage = null;
            fileValidationMessage = null;
            selectedMetodoDePago = "Efectivo";
            otroMetodoDePago = "";
        }
    }

    private void OnInputFileChange(InputFileChangeEventArgs e)
    {
        fileValidationMessage = null;
        comprobanteFile = e.GetMultipleFiles(1).FirstOrDefault();

        if (comprobanteFile != null)
        {
            if (comprobanteFile.Size > 5 * 1024 * 1024) // 5MB limit
            {
                fileValidationMessage = "Error: El archivo es demasiado grande (máximo 5MB).";
                comprobanteFile = null;
            }
        }
    }

    private async Task HandleRegistrarPago()
    {
        isSubmitting = true;
        errorMessage = null;

        if (comprobanteFile == null)
        {
            errorMessage = "Error: Debe adjuntar el comprobante de pago.";
            isSubmitting = false;
            return;
        }

        // Assign payment method from dropdown/text input
        nuevoCobro.MetodoDePago = selectedMetodoDePago == "Otro" ? otroMetodoDePago : selectedMetodoDePago;
        nuevoCobro.FechaCobro = DateTime.UtcNow;

        if (string.IsNullOrWhiteSpace(nuevoCobro.MetodoDePago))
        {
            errorMessage = "Error: Debe especificar un método de pago.";
            isSubmitting = false;
            return;
        }

        try
        {
            await using var fileStream = comprobanteFile.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024);
            await CobroService.RegistrarCobroAsync(nuevoCobro, fileStream, comprobanteFile.Name);
            await CloseModal(true);
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private async Task CloseModal(bool paymentRegistered = false)
    {
        IsVisible = false;
        await IsVisibleChanged.InvokeAsync(IsVisible);
        if (paymentRegistered)
        {
            await OnPaymentRegistered.InvokeAsync();
        }
    }
}
