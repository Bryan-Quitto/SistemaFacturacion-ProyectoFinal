@using Microsoft.AspNetCore.Components.Authorization
@using FacturasSRI.Web.Components

<Router AppAssembly="typeof(Program).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(Layout.MainLayout)">
            
            <Authorizing>
                <PageTitle>Autorizando...</PageTitle>
                <div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
                    <div class="text-center">
                        <p class="lead">Cargando informaci√≥n del usuario...</p>
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                    </div>
                </div>
            </Authorizing>
            
            <NotAuthorized Context="authContext">
                @{
                    if (authContext.User.Identity?.IsAuthenticated ?? false)
                    {
                        <LayoutView Layout="typeof(Layout.EmptyLayout)">
                            <FacturasSRI.Web.Components.Pages.Forbidden />
                        </LayoutView>
                    }
                    else
                    {
                        <RedirectToLogin />
                    }
                }
            </NotAuthorized>
            
        </AuthorizeRouteView>
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="typeof(Layout.EmptyLayout)">
            <FacturasSRI.Web.Components.Pages.NotFound />
        </LayoutView>
    </NotFound>
</Router>