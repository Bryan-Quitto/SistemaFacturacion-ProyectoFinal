@page "/login"
@rendermode @(new InteractiveServerRenderMode(prerender: false))

@using System.Net.Http
@using System.Net.Http.Json
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.JSInterop
@using FacturasSRI.Web.Services
@using FacturasSRI.Application.Dtos
@inject ApiClient ApiClient
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ILogger<Login> Logger

<PageTitle>Login</PageTitle>

<h1>Login</h1>

<div class="row">
    <div class="col-md-4">
        <EditForm Model="@loginRequest" OnValidSubmit="@HandleLogin" FormName="loginForm">
            <DataAnnotationsValidator />
            
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @errorMessage
                </div>
            }

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <InputText id="email" class="form-control" @bind-Value="loginRequest.Email" />
                <ValidationMessage For="@(() => loginRequest.Email)" />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <InputText id="password" type="password" class="form-control" @bind-Value="loginRequest.Password" />
                <ValidationMessage For="@(() => loginRequest.Password)" />
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </EditForm>
    </div>
</div>

@code {
    private LoginRequestDto loginRequest = new();
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        if (authState.User.Identity != null && authState.User.Identity.IsAuthenticated)
        {
            Logger.LogInformation("LOGIN.RAZOR (OnInitializedAsync): Usuario ya autenticado. Redirigiendo a '/'.");
            Navigation.NavigateTo(uri: "/");
        }
        else
        {
            Logger.LogInformation("LOGIN.RAZOR (OnInitializedAsync): Usuario no autenticado. Mostrando formulario de login.");
        }
    }

    private async Task HandleLogin()
    {
        Logger.LogInformation("LOGIN.RAZOR (HandleLogin): Inicio del proceso de login.");
        errorMessage = null; 
        HttpClient? http = null;

        try
        {
            http = await ApiClient.GetHttpClientAsync();
        }
        catch (Exception ex)
        {
            errorMessage = "Error al preparar la conexión. " + ex.Message;
            Logger.LogError(ex, "LOGIN.RAZOR (HandleLogin): Excepción en GetHttpClientAsync.");
            return;
        }

        Logger.LogInformation("LOGIN.RAZOR (HandleLogin): Cliente HTTP obtenido. Realizando POST a 'api/auth/login'.");

        try
        {
            var response = await http.PostAsJsonAsync("api/auth/login", loginRequest);
            
            if (response.IsSuccessStatusCode)
            {
                Logger.LogInformation("LOGIN.RAZOR (HandleLogin): Respuesta de API exitosa (código 2xx).");
                var result = await response.Content.ReadFromJsonAsync<LoginResult>();
                
                if (result != null && !string.IsNullOrEmpty(result.Token))
                {
                    Logger.LogInformation("LOGIN.RAZOR (HandleLogin): Token recibido de la API correctamente.");
                    
                    await JSRuntime.InvokeVoidAsync("console.log", "CLIENTE (Login.razor): [1] Intentando guardar token en localStorage.");
                    await JSRuntime.InvokeVoidAsync("localStorage.setItem", "authToken", result.Token);
                    await JSRuntime.InvokeVoidAsync("console.log", "CLIENTE (Login.razor): [2] Token guardado. Notificando al servidor...");
                    
                    Logger.LogInformation("LOGIN.RAZOR (HandleLogin): [A] Llamando a MarkUserAsAuthenticated en el servidor.");
                    ((ApiAuthenticationStateProvider)AuthenticationStateProvider).MarkUserAsAuthenticated(result.Token);
                    Logger.LogInformation("LOGIN.RAZOR (HandleLogin): [B] Llamada a MarkUserAsAuthenticated completada.");
                    
                    Logger.LogInformation("LOGIN.RAZOR (HandleLogin): [C] Esperando 50ms...");
                    await Task.Delay(50);
                    Logger.LogInformation("LOGIN.RAZOR (HandleLogin): [D] Espera completada. Intentando navegar a '/'.");
                    
                    await JSRuntime.InvokeVoidAsync("console.log", "CLIENTE (Login.razor): [3] Intentando navegar a '/' desde el cliente...");
                    Navigation.NavigateTo("/");
                    Logger.LogInformation("LOGIN.RAZOR (HandleLogin): [E] Llamada a Navigation.NavigateTo('/') ejecutada. Proceso finalizado.");
                }
                else
                {
                    errorMessage = "La respuesta del servidor no contenía un token válido.";
                    Logger.LogWarning("LOGIN.RAZOR (HandleLogin): El token de la API era nulo o vacío.");
                }
            }
            else
            {
                errorMessage = $"Error del servidor: {response.StatusCode}";
                Logger.LogWarning($"LOGIN.RAZOR (HandleLogin): La API devolvió un código de error: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error de red al intentar conectar con la API. " + ex.Message;
            Logger.LogError(ex, "LOGIN.RAZOR (HandleLogin): Excepción durante la llamada a la API.");
        }
    }

    public class LoginResult
    {
        public string Token { get; set; } = string.Empty;
    }
}