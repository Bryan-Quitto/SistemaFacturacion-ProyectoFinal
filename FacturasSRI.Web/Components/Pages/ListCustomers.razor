@page "/customers"
@attribute [Authorize(Policy = "VendedorPolicy")]
@using FacturasSRI.Application.Dtos
@using FacturasSRI.Application.Interfaces
@using FacturasSRI.Web.Components.Shared
@inject ICustomerService CustomerService
@inject NavigationManager Navigation

<PageTitle>Lista de Clientes</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Clientes</h1>
    <button class="btn btn-primary" @onclick="GoToCreateCustomer">
        <i class="bi bi-plus-circle-fill me-2"></i>Crear Nuevo Cliente
    </button>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Razón Social</th>
            <th>Número de Identificación</th>
            <th>Correo Electrónico</th>
            <th>Creado Por</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in customers)
        {
            <tr>
                <td>@customer.RazonSocial</td>
                <td>@customer.NumeroIdentificacion</td>
                <td>@customer.Email</td>
                <td>@customer.CreadoPor</td>
                <td>
                    <button class="btn btn-sm btn-secondary" @onclick="() => OpenEditModal(customer)">Editar</button>
                    <button class="btn btn-sm @(customer.EstaActivo ? "btn-danger" : "btn-success")" @onclick="() => HandleDeleteCustomer(customer.Id)">
                        @(customer.EstaActivo ? "Desactivar" : "Activar")
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (customerToEdit != null)
{
    <EditCustomerModal Customer="customerToEdit" IsVisible="isEditModalVisible" OnSave="HandleUpdateCustomer" OnClose="CloseEditModal" />
}


<ConfirmationModal IsVisible="showConfirmationModal"
                   Title="@confirmationModalTitle"
                   Message="@confirmationModalMessage"
                   OnConfirm="ConfirmToggleCustomerStatus"
                   OnCancel="CancelToggleCustomerStatus" />

@code {
    private List<CustomerDto> customers = new();
    private CustomerDto? customerToEdit;
    private bool isEditModalVisible = false;

    // Confirmation Modal State
    private bool showConfirmationModal = false;
    private string confirmationModalTitle = string.Empty;
    private string confirmationModalMessage = string.Empty;
    private Guid customerToToggleId;

    protected override async Task OnInitializedAsync()
    {
        await LoadCustomers();
    }
    
    private async Task LoadCustomers()
    {
        customers = await CustomerService.GetCustomersAsync();
    }

    private void HandleDeleteCustomer(Guid id)
    {
        var customerToToggle = customers.FirstOrDefault(c => c.Id == id);
        if (customerToToggle == null) return;

        customerToToggleId = id;
        confirmationModalTitle = "Confirmar Acción";
        confirmationModalMessage = $"¿Está seguro de que desea {(customerToToggle.EstaActivo ? "desactivar" : "activar")} al cliente {customerToToggle.RazonSocial}?";
        showConfirmationModal = true;
    }

    private async Task ConfirmToggleCustomerStatus()
    {
        showConfirmationModal = false; // Hide the modal

        var customerToToggle = customers.FirstOrDefault(c => c.Id == customerToToggleId);
        if (customerToToggle == null) return;

        try
        {
            await CustomerService.DeleteCustomerAsync(customerToToggleId);
            await LoadCustomers();
        }
        catch (Exception ex)
        {
            // Handle error, e.g., display an error message
            Console.WriteLine($"Error al toggling customer status: {ex.Message}");
        }
    }

    private void CancelToggleCustomerStatus()
    {
        showConfirmationModal = false; // Hide the modal
        customerToToggleId = Guid.Empty;
    }

    private async Task HandleUpdateCustomer(CustomerDto customer)
    {
        await CustomerService.UpdateCustomerAsync(customer);
        isEditModalVisible = false;
        customerToEdit = null;
        await LoadCustomers();
    }
    private void OpenEditModal(CustomerDto customer)
    {
        customerToEdit = new CustomerDto
        {
            Id = customer.Id,
            RazonSocial = customer.RazonSocial,
            NumeroIdentificacion = customer.NumeroIdentificacion,
            Email = customer.Email,
            Direccion = customer.Direccion,
            Telefono = customer.Telefono,
            TipoIdentificacion = customer.TipoIdentificacion,
            EstaActivo = customer.EstaActivo
        };
        isEditModalVisible = true;
    }

    private void CloseEditModal()
    {
        isEditModalVisible = false;
        customerToEdit = null;
    }

    private void GoToCreateCustomer()
    {
        Navigation.NavigateTo("/customers/create");
    }
}