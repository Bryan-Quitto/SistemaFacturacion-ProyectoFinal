@page "/products"
@attribute [Authorize]
@using FacturasSRI.Application.Dtos
@using FacturasSRI.Application.Interfaces
@using FacturasSRI.Web.Components.Shared
@inject IProductService ProductService
@inject NavigationManager Navigation

<PageTitle>Lista de Productos</PageTitle>

<div class="page-header d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1>Gestión de Productos</h1>
        <p class="text-muted">Edita y administra tus productos existentes.</p>
    </div>
    <button class="btn btn-primary" @onclick="GoToCreateProduct">
        <i class="bi bi-plus-circle-fill me-2"></i>Crear Nuevo Producto
    </button>
</div>


@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}


<div class="card">
    <div class="card-header">
        <h3>Listado de Productos</h3>
    </div>
    <div class="card-body">
        @if (products == null)
        {
            <p><em>Cargando...</em></p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Código Principal</th>
                            <th>Precio Unitario</th>
                            <th>Stock Actual</th>
                            <th>Creado Por</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in products)
                        {
                            <tr>
                                <td>@product.Nombre</td>
                                <td>@product.CodigoPrincipal</td>
                                <td>@product.PrecioVentaUnitario.ToString("C")</td>
                                <td>@product.StockTotal</td>
                                <td>@product.CreadoPor</td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a href="@($"stock/{product.Id}")" class="btn btn-sm btn-outline-secondary @(product.ManejaInventario ? "" : "disabled")">
                                            <i class="bi bi-box-seam"></i> Stock
                                        </a>
                                        <button class="btn btn-sm btn-outline-primary" @onclick="() => OpenEditModal(product)">
                                            <i class="bi bi-pencil-square"></i> Editar
                                        </button>
                                        <button class="btn btn-sm btn-outline-info" @onclick="() => OpenAssignTaxesModal(product)">
                                            <i class="bi bi-percent"></i> Impuestos
                                        </button>
                                        <button class="btn btn-sm @(product.IsActive ? "btn-outline-danger" : "btn-outline-success")" @onclick="() => HandleDeleteProduct(product.Id)">
                                            <i class="bi @(product.IsActive ? "bi-trash" : "bi-check-circle")"></i> @(product.IsActive ? "Desactivar" : "Activar")
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>


@if (productToEdit != null)
{
    <EditProductModal Product="productToEdit" IsVisible="isEditModalVisible" OnSave="HandleUpdateProductInModal" OnClose="CloseEditModal" />
}

@if (selectedProduct != null)
{
    <AssignTaxesModal Product="selectedProduct" IsVisible="isAssignTaxesModalVisible" OnClose="CloseAssignTaxesModal" />
}

<ConfirmationModal IsVisible="showConfirmationModal"
                   Title="@confirmationModalTitle"
                   Message="@confirmationModalMessage"
                   OnConfirm="ConfirmToggleProductStatus"
                   OnCancel="CancelToggleProductStatus" />

@code {
    public EventCallback<ProductDto> OnSave { get; set; }
    private List<ProductDto>? products;
    private ProductDto? selectedProduct;
    private bool isAssignTaxesModalVisible = false;
    private string? errorMessage;

    private ProductDto? productToEdit;
    private bool isEditModalVisible = false;

    // Confirmation Modal State
    private bool showConfirmationModal = false;
    private string confirmationModalTitle = string.Empty;
    private string confirmationModalMessage = string.Empty;
    private Guid productToToggleId;

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        errorMessage = null;
        try
        {
            products = await ProductService.GetProductsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar productos: {ex.Message}";
        }
    }

    private void HandleDeleteProduct(Guid id)
    {
        var productToToggle = products?.FirstOrDefault(p => p.Id == id);
        if (productToToggle == null) return;

        productToToggleId = id;
        confirmationModalTitle = "Confirmar Acción";
        confirmationModalMessage = $"¿Está seguro de que desea {(productToToggle.IsActive ? "desactivar" : "activar")} el producto {productToToggle.Nombre}?";
        showConfirmationModal = true;
    }

    private async Task ConfirmToggleProductStatus()
    {
        errorMessage = null;
        showConfirmationModal = false; // Hide the modal

        var productToToggle = products?.FirstOrDefault(p => p.Id == productToToggleId);
        if (productToToggle == null) return;

        string action = productToToggle.IsActive ? "desactivar" : "activar";

        try
        {
            await ProductService.DeleteProductAsync(productToToggleId);
            await LoadProducts();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al {action} producto: {ex.Message}";
        }
    }

    private void CancelToggleProductStatus()
    {
        showConfirmationModal = false; // Hide the modal
        productToToggleId = Guid.Empty;
    }
    
    private async Task HandleUpdateProductInModal(ProductDto product)
    {
        await ProductService.UpdateProductAsync(product);
        isEditModalVisible = false;
        productToEdit = null;
        await LoadProducts();
    }

    private void OpenAssignTaxesModal(ProductDto product)
    {
        selectedProduct = product;
        isAssignTaxesModalVisible = true;
    }

    private void CloseAssignTaxesModal()
    {
        isAssignTaxesModalVisible = false;
        selectedProduct = null;
    }

    private void OpenEditModal(ProductDto product)
    {
        productToEdit = new ProductDto
        {
            Id = product.Id,
            Nombre = product.Nombre,
            CodigoPrincipal = product.CodigoPrincipal,
            Descripcion = product.Descripcion,
            PrecioVentaUnitario = product.PrecioVentaUnitario,
            ManejaInventario = product.ManejaInventario,
            ManejaLotes = product.ManejaLotes,
            IsActive = product.IsActive // Initialize IsActive
        };
        isEditModalVisible = true;
    }

    private async Task CloseEditModal()
    {
        isEditModalVisible = false;
        productToEdit = null;
        await LoadProducts();
    }
    
    private void GoToCreateProduct()
    {
        Navigation.NavigateTo("/products/create");
    }
}