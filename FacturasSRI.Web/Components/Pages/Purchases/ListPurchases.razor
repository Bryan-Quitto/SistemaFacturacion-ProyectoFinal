@page "/purchases"
@attribute [Authorize(Roles = "Administrador, Bodeguero")]
@using FacturasSRI.Application.Dtos
@using FacturasSRI.Application.Interfaces
@using FacturasSRI.Domain.Enums
@using FacturasSRI.Web.Components.Shared
@inject IPurchaseService PurchaseService
@inject NavigationManager Navigation

<PageTitle>Historial de Compras</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1>Cuentas por Pagar</h1>
        <p class="text-muted mb-0">Consulta todas las compras registradas.</p>
    </div>
    <a href="/purchases/create" class="btn btn-primary">
        <i class="bi bi-plus-circle-fill me-2"></i>Registrar Compra
    </a>
</div>

<div class="row g-2 mb-3">
    <div class="col-md-5">
        <input type="text" class="form-control" placeholder="Buscar por producto o proveedor..." 
               @bind="searchTerm" @bind:event="oninput" @onkeyup="OnFilterChanged" />
    </div>
    <div class="col-md-4">
        <InputSelect class="form-select" @bind-Value="selectedStatus" @bind-Value:after="OnFilterChanged">
            <option value="">Todos los Estados</option>
            @foreach (var s in Enum.GetValues(typeof(EstadoCompra)))
            {
                <option value="@s">@s.ToString()</option>
            }
        </InputSelect>
    </div>
    <div class="col-md-3">
        <InputSelect class="form-select" @bind-Value="selectedFormaDePago" @bind-Value:after="OnFilterChanged">
            <option value="">Todas las Formas de Pago</option>
            @foreach (var forma in Enum.GetValues(typeof(FormaDePago)))
            {
                <option value="@forma">@forma.ToString()</option>
            }
        </InputSelect>
    </div>
</div>

@if (isLoading)
{
    <p><em>Cargando historial de compras...</em></p>
}
else if (paginatedPurchases != null && paginatedPurchases.Items.Any())
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Estado</th>
                    <th>Forma de Pago</th>
                    <th>Producto</th>
                    <th>Proveedor</th>
                    <th class="text-end">Cantidad</th>
                    <th class="text-end">Precio Unitario</th>
                    <th class="text-end">Monto Total</th>
                    <th>Fecha Emisión</th>
                    <th>Vencimiento</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var purchase in paginatedPurchases.Items)
                {
                    <tr>
                        <td>
                            <span class="badge @GetBadgeClass(purchase.Estado)">
                                @purchase.Estado.ToString()
                            </span>
                        </td>
                        <td>
                            <span class="badge @(purchase.FormaDePago == FormaDePago.Credito ? "bg-info text-dark" : "bg-light text-dark border")">
                                @purchase.FormaDePago.ToString()
                            </span>
                        </td>
                        <td class="fw-medium">@purchase.ProductName</td>
                        <td>@purchase.NombreProveedor</td>
                        <td class="text-end">@purchase.Cantidad</td>
                        <td class="text-end">@purchase.PrecioCompraUnitario.ToString("C")</td>
                        <td class="text-end fw-bold">@purchase.MontoTotal.ToString("C")</td>
                        <td>@purchase.FechaEmision.ToLocalTime().ToShortDateString()</td>
                        <td>
                            @if(purchase.FechaVencimiento.HasValue)
                            {
                                <span class="@(purchase.FechaVencimiento.Value <= DateTime.Now.AddDays(5) && purchase.Estado == EstadoCompra.Pendiente ? "text-danger fw-bold" : "")">
                                    @purchase.FechaVencimiento.Value.ToShortDateString()
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="btn-group shadow-sm" role="group">
                                <button class="btn btn-sm btn-outline-secondary" @onclick="@(() => GoToDetails(purchase.Id))" title="Ver Detalles">
                                    <i class="bi bi-eye-fill"></i>
                                </button>
                                
                                @if (purchase.Estado == EstadoCompra.Pendiente || purchase.Estado == EstadoCompra.Vencida)
                                {
                                    <button class="btn btn-sm btn-outline-success" @onclick="@(() => GoToRegisterPayment(purchase.Id))" title="Registrar Pago">
                                        <i class="bi bi-cash-coin"></i>
                                    </button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-3">
        <p class="text-muted mb-0 small">
            Mostrando del @((currentPage - 1) * pageSize + 1) al @Math.Min(currentPage * pageSize, paginatedPurchases.TotalCount) de @paginatedPurchases.TotalCount registros.
        </p>
        <Pagination CurrentPage="currentPage" 
                    TotalPages="paginatedPurchases.TotalPages" 
                    OnPageSelected="SelectedPage" />
    </div>
}
else
{
    <div class="alert alert-light border text-center py-4">
        <i class="bi bi-search display-6 text-muted mb-3 d-block"></i>
        No se han registrado compras con los filtros seleccionados.
    </div>
}

@code {
    private PaginatedList<PurchaseListItemDto>? paginatedPurchases;
    private bool isLoading = true;
    
    // Paginación y Filtros
    private int currentPage = 1;
    private int pageSize = 15;
    private string searchTerm = string.Empty;
    private EstadoCompra? selectedStatus; 
    private FormaDePago? selectedFormaDePago;

    protected override async Task OnInitializedAsync()
    {
        await LoadData(currentPage);
    }

    private async Task LoadData(int page)
    {
        currentPage = page;
        isLoading = true;
        try
        {
            paginatedPurchases = await PurchaseService.GetPurchasesAsync(currentPage, pageSize, searchTerm, selectedStatus, selectedFormaDePago);
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task OnFilterChanged()
    {
        await LoadData(1);
    }

    private async Task SelectedPage(int page)
    {
        await LoadData(page);
    }

    private string GetBadgeClass(EstadoCompra estado)
    {
        return estado switch
        {
            EstadoCompra.Pagada => "bg-success",
            EstadoCompra.Pendiente => "bg-warning text-dark",
            EstadoCompra.Vencida => "bg-danger",
            EstadoCompra.Cancelada => "bg-secondary",
            _ => "bg-light text-dark border",
        };
    }
    
    private void GoToDetails(Guid purchaseId)
    {
        Navigation.NavigateTo($"/purchases/details/{purchaseId}");
    }
    
    private void GoToRegisterPayment(Guid purchaseId)
    {
        Navigation.NavigateTo($"/purchases/pay/{purchaseId}");
    }
}