@page "/purchases/create"
@attribute [Authorize(Roles = "Administrador, Bodeguero")]

@using FacturasSRI.Application.Dtos
@using FacturasSRI.Application.Interfaces
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Forms
@inject IPurchaseService PurchaseService
@inject HttpClient Http
@inject ITaxService TaxService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject Supabase.Client Supabase
@using FacturasSRI.Domain.Enums

<PageTitle>Registrar Compra</PageTitle>

<div class="page-header">
    <h1>Registrar Nueva Compra</h1>
    <p>Complete los datos para registrar el ingreso de mercancía.</p>
</div>

@if (!string.IsNullOrEmpty(statusMessage))
{
    <div class="alert @(isSuccess ? "alert-success" : "alert-danger") mb-4" role="alert">
        @statusMessage
        <button type="button" class="btn-close float-end" @onclick="ClearStatusMessage" aria-label="Close"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <EditForm Model="@newPurchase" OnValidSubmit="@HandleAddPurchase">
            <DataAnnotationsValidator />
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="product-search" class="form-label">Producto</label>
                        <div class="position-relative">
                            <input type="text" id="product-search" class="form-control" 
                                   placeholder="Buscar por nombre o código..."
                                   @bind="productSearchTerm" @bind:event="oninput" 
                                   @onkeyup="SearchProducts" 
                                   disabled="@(isSubmitting || selectedProduct != null)" />

                            @if (productSearchResults.Any())
                            {
                                <div class="list-group position-absolute w-100 shadow-sm" style="z-index: 10;">
                                    @foreach (var product in productSearchResults)
                                    {
                                        <button type="button" class="list-group-item list-group-item-action" 
                                                @onclick="() => SelectProduct(product)">
                                            @product.Nombre
                                            <span class="text-muted small">(@product.CodigoPrincipal)</span>
                                        </button>
                                    }
                                </div>
                            }
                        </div>
                        <ValidationMessage For="@(() => newPurchase.ProductoId)" />
                    </div>
                    @if(selectedProduct != null)
                    {
                        <div class="alert alert-info small p-2 mb-3 d-flex justify-content-between align-items-center">
                           <div>
                                <div>PVP Actual del Producto: <strong>@selectedProduct.PrecioVentaUnitario.ToString("C")</strong></div>
                                <div>Costo Promedio Ponderado Actual: <strong>@selectedProduct.PrecioCompraPromedioPonderado.ToString("C")</strong></div>
                           </div>
                            <button type="button" class="btn-close" @onclick="ClearSelectedProduct" aria-label="Limpiar selección"></button>
                        </div>
                    }

                    <div class="mb-3">
                        <label for="nombreProveedor" class="form-label">Nombre del Proveedor</label>
                        <InputText id="nombreProveedor" class="form-control" @bind-Value="newPurchase.NombreProveedor" disabled="@isSubmitting" />
                        <ValidationMessage For="@(() => newPurchase.NombreProveedor)" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Nº Factura Proveedor (Opcional)</label>
                        <InputText @bind-Value="newPurchase.NumeroFacturaProveedor" class="form-control" placeholder="Ej: 001-002-123456" />
                    </div>

                    <div class="mb-3">
                        <label for="comprobante" class="form-label">Comprobante de Compra (PDF)</label>
                        <InputFile id="comprobante" class="form-control" OnChange="@OnInputFileChange" disabled="@isSubmitting" accept=".pdf" />
                        @if (!string.IsNullOrEmpty(fileValidationMessage))
                        {
                            <div class="text-danger small mt-1">@fileValidationMessage</div>
                        }
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="cantidad" class="form-label">Cantidad</label>
                        <InputNumber id="cantidad" class="form-control" @bind-Value="newPurchase.Cantidad" @bind-Value:after="UpdateMontoTotal" disabled="@isSubmitting" />
                        <ValidationMessage For="@(() => newPurchase.Cantidad)" />
                    </div>
                    <div class="mb-3">
                        <label for="impuesto" class="form-label">Impuesto Aplicado</label>
                        <InputSelect id="impuesto" class="form-select" @bind-Value="newPurchase.ImpuestoId" @bind-Value:after="UpdateMontoTotal" disabled="@isSubmitting">
                            @foreach (var tax in activeTaxes)
                            {
                                <option value="@tax.Id">@tax.Nombre (@tax.Porcentaje%)</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="@(() => newPurchase.ImpuestoId)" />
                    </div>
                    <div class="mb-3">
                        <label for="precioCompra" class="form-label">Precio de Compra Unitario (Sin IVA)</label>
                        <InputNumber id="precioCompra" class="form-control" @bind-Value="newPurchase.PrecioCompraUnitario" @bind-Value:after="UpdateMontoTotal" disabled="@isSubmitting" step="0.01" />
                        <ValidationMessage For="@(() => newPurchase.PrecioCompraUnitario)" />
                    </div>
                     <div class="mb-3">
                        <label class="form-label">Monto Total Calculado (IVA Incluido)</label>
                        <input class="form-control" value="@montoTotalCalculado.ToString("C")" readonly disabled />
                    </div>
                    @if (showPvpWarning && selectedProduct != null)
                    {
                        <div class="alert alert-warning small p-2">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            Atención: El nuevo Costo Promedio (@newAverageCost.ToString("C")) será mayor que el PVP actual del producto (@selectedProduct.PrecioVentaUnitario.ToString("C")).
                        </div>
                    }
                    <div class="mb-3">
                        <label for="fechaCaducidad" class="form-label">Fecha de Caducidad (Opcional)</label>
                        <InputDate id="fechaCaducidad" class="form-control" @bind-Value="newPurchase.FechaCaducidad" disabled="@isSubmitting" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="formaDePago" class="form-label">Forma de Pago</label>
                        <InputSelect id="formaDePago" class="form-select" @bind-Value="newPurchase.FormaDePago" disabled="@isSubmitting">
                            @foreach (var forma in Enum.GetValues(typeof(FormaDePago)))
                            {
                                <option value="@forma">@forma.ToString()</option>
                            }
                        </InputSelect>
                    </div>

                    @if (newPurchase.FormaDePago == FormaDePago.Credito)
                    {
                        <div class="mb-3">
                            <label for="fechaVencimiento" class="form-label">Fecha de Vencimiento</label>
                            <InputDate id="fechaVencimiento" class="form-control" @bind-Value="newPurchase.FechaVencimiento" disabled="@isSubmitting" />
                            <ValidationMessage For="@(() => newPurchase.FechaVencimiento)" />
                        </div>
                    }
                </div>
            </div>
            <div class="mt-4">
                <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                    @if (isSubmitting)
                    {
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        <span> Registrando...</span>
                    }
                    else
                    {
                        <span><i class="bi bi-floppy-fill me-2"></i>Registrar Compra</span>
                    }
                </button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private List<ProductDto> allProducts = new();
    private List<ProductDto> products = new();
    private PurchaseDto newPurchase = new();
    private string? statusMessage;
    private bool isSuccess;
    private bool isSubmitting = false;

    private string productSearchTerm = string.Empty;
    private List<ProductDto> productSearchResults = new();

    private IBrowserFile? comprobanteFile;
    private string? fileValidationMessage;
    private decimal montoTotalCalculado = 0;
    private List<TaxDto> activeTaxes = new();
    private ProductDto? selectedProduct;
    private bool showPvpWarning = false;
    private decimal newAverageCost = 0;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var baseUri = Navigation.ToAbsoluteUri(Navigation.BaseUri);
            var cacheBuster = DateTime.Now.Ticks;

            var productsTask = Http.GetFromJsonAsync<List<ProductDto>>(new Uri(baseUri, $"cache/products.json?v={cacheBuster}"));
            var taxesTask = TaxService.GetActiveTaxesAsync();

            await Task.WhenAll(productsTask, taxesTask);

            allProducts = productsTask.Result ?? new List<ProductDto>();
            products = allProducts.Where(p => p.ManejaInventario && p.IsActive).ToList();
            activeTaxes = await taxesTask;
            
            var defaultTax = activeTaxes.FirstOrDefault(t => t.Porcentaje == 15);
            if(defaultTax != null)
            {
                newPurchase.ImpuestoId = defaultTax.Id;
            }
        }
        catch (Exception ex)
        {
            statusMessage = $"No se pudieron cargar los datos iniciales (productos o impuestos). Error: {ex.Message}";
            isSuccess = false;
        }
    }

    private void SearchProducts()
    {
        if (string.IsNullOrWhiteSpace(productSearchTerm))
        {
            productSearchResults.Clear();
            return;
        }
        productSearchResults = products
            .Where(p => p.Nombre.Contains(productSearchTerm, StringComparison.OrdinalIgnoreCase) ||
                        p.CodigoPrincipal.Contains(productSearchTerm, StringComparison.OrdinalIgnoreCase))
            .Take(5)
            .ToList();
    }

    private void SelectProduct(ProductDto product)
    {
        selectedProduct = product;
        newPurchase.ProductoId = product.Id;
        productSearchTerm = string.Empty;
        productSearchResults.Clear();
        UpdateMontoTotal();
    }

    private void ClearSelectedProduct()
    {
        selectedProduct = null;
        newPurchase.ProductoId = Guid.Empty;
        UpdateMontoTotal();
    }

   private void UpdateMontoTotal()
    {
        var selectedTax = activeTaxes.FirstOrDefault(t => t.Id == newPurchase.ImpuestoId);
        var taxRate = selectedTax?.Porcentaje / 100m ?? 0;
        
        // 1. Calculamos cuánto le debemos al proveedor (ESTO SÍ LLEVA IVA)
        montoTotalCalculado = (newPurchase.Cantidad * newPurchase.PrecioCompraUnitario) * (1 + taxRate);
        
        newAverageCost = 0; 

        if (selectedProduct != null && newPurchase.Cantidad > 0)
        {
            var currentStock = selectedProduct.StockTotal;
            // OJO: Este precio promedio histórico ya debe venir SIN IVA desde la BD
            var currentAverageCost = selectedProduct.PrecioCompraPromedioPonderado; 
            
            var newQuantity = newPurchase.Cantidad;
            // Usamos el precio SIN IVA para el cálculo del costo
            var newPurchasePrice = newPurchase.PrecioCompraUnitario; 

            var totalStock = currentStock + newQuantity;
            
            if (totalStock > 0)
            {
                // Fórmula de Promedio Ponderado (Todo en base neta, SIN IVA)
                newAverageCost = ((currentStock * currentAverageCost) + (newQuantity * newPurchasePrice)) / totalStock;
                
                // Ahora comparamos peras con peras (Costo Neto vs PVP Neto)
                // Si mi costo promedio (ej. $8) es mayor que mi precio de venta (ej. $7), pierdo dinero.
                if (newAverageCost > selectedProduct.PrecioVentaUnitario)
                {
                    showPvpWarning = true;
                }
                else
                {
                    showPvpWarning = false;
                }
            }
        }
        else
        {
            showPvpWarning = false;
        }

        StateHasChanged();
    }
    
    private void OnInputFileChange(InputFileChangeEventArgs e)
    {
        fileValidationMessage = null;
        comprobanteFile = e.GetMultipleFiles(1).FirstOrDefault();

        if (comprobanteFile != null)
        {
            if (comprobanteFile.ContentType != "application/pdf")
            {
                fileValidationMessage = "Error: El archivo seleccionado no es un PDF.";
                comprobanteFile = null;
                return;
            }
            if (comprobanteFile.Size > 5 * 1024 * 1024) // 5MB limit
            {
                fileValidationMessage = "Error: El archivo es demasiado grande (máximo 5MB).";
                comprobanteFile = null;
            }
        }
    }

    private async Task HandleAddPurchase()
    {
        isSubmitting = true;
        statusMessage = null;
        isSuccess = false;

        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var userId = user.FindFirstValue(ClaimTypes.NameIdentifier);

        if (string.IsNullOrEmpty(userId))
        {
            statusMessage = "No se pudo identificar al usuario. Por favor, inicie sesión de nuevo.";
            isSubmitting = false;
            return;
        }
        
        if (comprobanteFile == null)
        {
            statusMessage = "Error: Debe adjuntar el comprobante en formato PDF para registrar la compra.";
            isSubmitting = false;
            return;
        }

        if (!string.IsNullOrEmpty(fileValidationMessage))
        {
           statusMessage = fileValidationMessage;
           isSubmitting = false;
           return;
        }
        
        newPurchase.UsuarioIdCreador = Guid.Parse(userId);

        try
        {
            // 1. Upload file to Supabase
            var fileExtension = Path.GetExtension(comprobanteFile.Name);
            var fileName = $"{Guid.NewGuid()}{fileExtension}";
            var bucketPath = $"{userId}/{fileName}";

            await using var memoryStream = new MemoryStream();
            await comprobanteFile.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024).CopyToAsync(memoryStream);
            
            await Supabase.Storage.From("comprobantes-compra").Upload(memoryStream.ToArray(), bucketPath);
            
            newPurchase.FacturaCompraPath = bucketPath;

            // 2. Create purchase record in DB
            var success = await PurchaseService.CreatePurchaseAsync(newPurchase);
            if(success)
            {
                isSuccess = true;
                statusMessage = "¡Compra registrada exitosamente!";
                newPurchase = new();
                comprobanteFile = null; 
                StateHasChanged();
            }
            else
            {
                statusMessage = "No se pudo registrar la compra en la base de datos. Por favor, revise la información e inténtelo de nuevo. Si el problema persiste, contacte a soporte técnico.";
            }
        }
        catch (Exception ex)
        {
            statusMessage = $"Ocurrió un error al procesar la compra. Por favor, revise los datos ingresados e inténtelo de nuevo. Si el problema persiste, contacte a soporte técnico. Detalles: {ex.Message}";
            isSuccess = false; // Ensure isSuccess is false on error
            StateHasChanged();
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void ClearStatusMessage()
    {
        statusMessage = null;
        isSuccess = false;
        StateHasChanged();
    }
}
