@page "/inventory/adjustments"
@attribute [Authorize(Roles = "Administrador, Bodeguero")]
@using FacturasSRI.Application.Dtos
@using FacturasSRI.Application.Interfaces
@using FacturasSRI.Domain.Enums
@using FacturasSRI.Web.Components.Shared
@inject IAjusteInventarioService AjusteInventarioService

<PageTitle>Historial de Ajustes</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1>Ajustes de Inventario</h1>
        <p class="text-muted mb-0">Historial de movimientos manuales (Daños, Pérdidas, Conteo, etc).</p>
    </div>
</div>

<div class="mb-3">
    <input type="text" class="form-control" placeholder="Buscar por producto..." 
           @bind="searchTerm" @bind:event="oninput" @onkeyup="OnFilterChanged" />
</div>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger mb-4 shadow-sm border-0" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @errorMessage
        <button type="button" class="btn-close float-end" @onclick="ClearErrorMessage" aria-label="Close"></button>
    </div>
}

@if (isLoading)
{
    <p><em>Cargando historial...</em></p>
}
else if (paginatedAdjustments != null && paginatedAdjustments.Items.Any())
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Producto</th>
                    <th>Tipo (Razón)</th>
                    <th class="text-end">Cantidad</th>
                    <th>Detalle / Motivo</th>
                    <th>Autorizado Por</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ajuste in paginatedAdjustments.Items)
                {
                    <tr>
                        <td class="text-muted small">@ajuste.Fecha.ToLocalTime().ToString("g")</td>
                        <td class="fw-medium">@ajuste.ProductoNombre</td>
                        <td>
                            @if (ajuste.CantidadAjustada > 0)
                            {
                                <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-10">
                                    <i class="bi bi-arrow-up-circle me-1"></i>@ajuste.Tipo
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger bg-opacity-10 text-danger border border-danger border-opacity-10">
                                    <i class="bi bi-arrow-down-circle me-1"></i>@ajuste.Tipo
                                </span>
                            }
                        </td>
                        <td class="text-end fw-bold @(ajuste.CantidadAjustada > 0 ? "text-success" : "text-danger")">
                            @ajuste.CantidadAjustada
                        </td>
                        <td class="text-muted small">@ajuste.Motivo</td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="bg-light rounded-circle p-1 me-2 text-secondary d-flex align-items-center justify-content-center" style="width: 24px; height: 24px;">
                                    <i class="bi bi-person-fill small"></i>
                                </div>
                                <span class="text-muted small">@ajuste.UsuarioAutoriza</span>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-3">
        <p class="text-muted mb-0 small">
            Mostrando del @((currentPage - 1) * pageSize + 1) al @Math.Min(currentPage * pageSize, paginatedAdjustments.TotalCount) de @paginatedAdjustments.TotalCount registros.
        </p>
        <Pagination CurrentPage="currentPage" 
                    TotalPages="paginatedAdjustments.TotalPages" 
                    OnPageSelected="SelectedPage" />
    </div>
}
else
{
    <div class="alert alert-light border text-center py-4">
        <i class="bi bi-inbox display-6 text-muted mb-3 d-block"></i>
        No se han registrado ajustes de inventario con los filtros actuales.
    </div>
}

@code {
    private PaginatedList<AjusteListItemDto>? paginatedAdjustments;
    private bool isLoading = true;
    private string? errorMessage;
    
    private int currentPage = 1;
    private int pageSize = 15;
    private string searchTerm = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadData(currentPage);
    }

    private async Task LoadData(int page)
    {
        currentPage = page;
        isLoading = true;
        try
        {
            paginatedAdjustments = await AjusteInventarioService.GetAdjustmentsAsync(currentPage, pageSize, searchTerm);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error cargando ajustes: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task OnFilterChanged()
    {
        await LoadData(1);
    }
    
    private async Task SelectedPage(int page)
    {
        await LoadData(page);
    }

    private void ClearErrorMessage()
    {
        errorMessage = null;
        StateHasChanged();
    }
}