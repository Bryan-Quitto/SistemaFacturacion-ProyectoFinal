@page "/reset-password"
@layout EmptyLayout
@rendermode @(new InteractiveServerRenderMode(prerender: false))

@using System.ComponentModel.DataAnnotations
@using FacturasSRI.Application.Interfaces
@inject IUserService UserService
@inject ICustomerService CustomerService
@inject NavigationManager Navigation

<PageTitle>Establecer Nueva Contraseña</PageTitle>

<div class="form-container">
    <div class="card auth-card">
        <div class="card-body">
            <div class="text-center mb-4">
                <img src="logo.png" alt="Logo" style="max-width: 150px; margin-bottom: 1rem;" />
                <h1 class="h3 mb-3 fw-normal">Establecer Nueva Contraseña</h1>
            </div>

            @if (showSuccessMessage)
            {
                <div class="alert alert-success">
                    <p>Tu contraseña ha sido cambiada exitosamente.</p>
                </div>
                <div class="text-center mt-3">
                    <a href="/login" class="btn btn-primary">Ir a Iniciar Sesión</a>
                </div>
            }
            else if (showErrorMessage)
            {
                <div class="alert alert-danger">
                    <p>@errorMessage</p>
                </div>
                 <div class="text-center mt-3">
                    <a href="/request-password-reset" class="btn btn-secondary">Solicitar un nuevo enlace</a>
                </div>
            }
            else
            {
                <EditForm Model="@model" OnValidSubmit="HandleReset" FormName="resetPasswordForm">
                    <DataAnnotationsValidator />
                    
                    <div class="form-floating mb-3">
                        <InputText id="newPassword" type="password" class="form-control" @bind-Value="model.NewPassword" placeholder="Nueva Contraseña" />
                        <label for="newPassword">Nueva Contraseña</label>
                        <ValidationMessage For="@(() => model.NewPassword)" />
                    </div>
                    <div class="form-floating mb-3">
                        <InputText id="confirmPassword" type="password" class="form-control" @bind-Value="model.ConfirmPassword" placeholder="Confirmar Nueva Contraseña" />
                        <label for="confirmPassword">Confirmar Nueva Contraseña</label>
                        <ValidationMessage For="@(() => model.ConfirmPassword)" />
                    </div>
                    
                    <button class="w-100 btn btn-lg btn-primary" type="submit">Guardar Nueva Contraseña</button>
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    public string? Token { get; set; }

    private ResetModel model = new();
    private bool showSuccessMessage = false;
    private bool showErrorMessage = false;
    private string errorMessage = "El enlace para restablecer la contraseña es inválido o ha expirado. Por favor, solicita uno nuevo.";

    protected override void OnInitialized()
    {
        if (string.IsNullOrEmpty(Token))
        {
            showErrorMessage = true;
        }
    }

    private async Task HandleReset()
    {
        if (string.IsNullOrEmpty(Token))
        {
            showErrorMessage = true;
            return;
        }

        // Try resetting as a User first
        var success = await UserService.ResetPasswordAsync(Token, model.NewPassword);

        // If that fails, try resetting as a Customer
        if (!success)
        {
            success = await CustomerService.ResetPasswordAsync(Token, model.NewPassword);
        }

        if (success)
        {
            showSuccessMessage = true;
        }
        else
        {
            showErrorMessage = true;
        }
    }

    public class ResetModel
    {
        [Required(ErrorMessage = "La nueva contraseña es obligatoria.")]
        [MinLength(6, ErrorMessage = "La contraseña debe tener al menos 6 caracteres.")]
        public string NewPassword { get; set; } = string.Empty;

        [Required(ErrorMessage = "La confirmación es obligatoria.")]
        [Compare("NewPassword", ErrorMessage = "Las contraseñas no coinciden.")]
        public string ConfirmPassword { get; set; } = string.Empty;
    }
}
