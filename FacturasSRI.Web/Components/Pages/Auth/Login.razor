@page "/login"
@layout EmptyLayout
@rendermode @(new InteractiveServerRenderMode(prerender: false))

@using System.Net.Http
@using System.Net.Http.Json
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.JSInterop
@using FacturasSRI.Web.Services
@using FacturasSRI.Application.Dtos
@inject ApiClient ApiClient
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ILogger<Login> Logger

<PageTitle>Iniciar Sesión</PageTitle>

<div class="login-container">
    <div class="card login-card">
        <div class="card-body">
            <div class="text-center mb-4">
                <img src="logo.png" alt="Logo Aether Tech" style="max-width: 150px; margin-bottom: 1rem;" />
                <h1 class="h3 mb-3 fw-normal">Iniciar Sesión</h1>
                <p class="text-muted">Bienvenido a Aether Tech</p>
            </div>

            <EditForm Model="@loginRequest" OnValidSubmit="@HandleLogin" FormName="loginForm">
                <DataAnnotationsValidator />
                
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        @errorMessage
                    </div>
                }

                <div class="form-floating mb-3">
                    <InputText id="email" class="form-control" @bind-Value="loginRequest.Email" placeholder="correo@ejemplo.com" />
                    <label for="email">Correo Electrónico</label>
                    <ValidationMessage For="@(() => loginRequest.Email)" />
                </div>
                <div class="form-floating mb-3">
                    <InputText id="password" type="password" class="form-control" @bind-Value="loginRequest.Password" placeholder="Contraseña" />
                    <label for="password">Contraseña</label>
                    <ValidationMessage For="@(() => loginRequest.Password)" />
                </div>

                <div class="text-end mb-3">
                    <a href="/request-password-reset">¿Olvidaste tu contraseña?</a>
                </div>
                
                <button class="w-100 btn btn-lg btn-primary" type="submit">
                    @if (isSubmitting)
                    {
                        <span class="spinner-border spinner-border-sm"></span>
                    }
                    else
                    {
                        <span>Ingresar</span>
                    }
                </button>
            </EditForm>
        </div>
    </div>
</div>


@code {
    [SupplyParameterFromQuery]
    public string? ReturnUrl { get; set; }

    private LoginRequestDto loginRequest = new();
    private string? errorMessage;
    private bool isSubmitting = false;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        if (authState.User.Identity != null && authState.User.Identity.IsAuthenticated)
        {
            Navigation.NavigateTo(ReturnUrl ?? "/");
        }
    }

    private async Task HandleLogin()
    {
        isSubmitting = true;
        errorMessage = null; 
        HttpClient? http = null;

        try
        {
            http = await ApiClient.GetHttpClientAsync();
        }
        catch (Exception ex)
        {
            errorMessage = "Error al preparar la conexión. " + ex.Message;
            isSubmitting = false;
            return;
        }

        try
        {
            var response = await http.PostAsJsonAsync("api/auth/login", loginRequest);
            
            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<LoginResult>();
                
                if (result != null && !string.IsNullOrEmpty(result.Token))
                {
                    await JSRuntime.InvokeVoidAsync("localStorage.setItem", "authToken", result.Token);
                    ((ApiAuthenticationStateProvider)AuthenticationStateProvider).MarkUserAsAuthenticated(result.Token);
                    Navigation.NavigateTo(ReturnUrl ?? "/");
                }
                else
                {
                    errorMessage = "La respuesta del servidor no contenía un token válido.";
                }
            }
            else
            {
                errorMessage = await response.Content.ReadAsStringAsync();
                if (string.IsNullOrWhiteSpace(errorMessage))
                {
                    errorMessage = $"Error: {response.ReasonPhrase}";
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error de red al intentar conectar con la API. " + ex.Message;
        }
        finally
        {
            isSubmitting = false;
        }
    }

    public class LoginResult
    {
        public string Token { get; set; } = string.Empty;
    }
}