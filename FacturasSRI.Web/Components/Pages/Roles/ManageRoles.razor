@page "/roles"
@attribute [Authorize(Roles = "Administrador")]
@using FacturasSRI.Application.Dtos
@using FacturasSRI.Application.Interfaces
@inject IRoleService RoleService

<PageTitle>Roles</PageTitle>

<h1>Roles</h1>

@if (!string.IsNullOrEmpty(statusMessage))
{
    <div class="alert @(isSuccess ? "alert-success" : "alert-danger") mb-4" role="alert">
        @statusMessage
        <button type="button" class="btn-close float-end" @onclick="ClearStatusMessage" aria-label="Close"></button>
    </div>
}

<div class="mb-3">
    <EditForm Model="@newRole" OnValidSubmit="@HandleAddRole">
        <DataAnnotationsValidator />
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre</label>
                    <InputText id="nombre" class="form-control" @bind-Value="newRole.Nombre" />
                    <ValidationMessage For="@(() => newRole.Nombre)" />
                </div>
                <div class="mb-3">
                    <label for="descripcion" class="form-label">Descripción</label>
                    <InputText id="descripcion" class="form-control" @bind-Value="newRole.Descripcion" />
                    <ValidationMessage For="@(() => newRole.Descripcion)" />
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Añadir Rol</button>
    </EditForm>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in roles)
        {
            <tr>
                <td>@role.Nombre</td>
                <td>@role.Descripcion</td>
                <td>
                    <button class="btn btn-sm btn-danger" @onclick="() => HandleDeleteRole(role.Id)">Desactivar</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    private List<RoleDto> roles = new();
    private RoleDto newRole = new();
    private string? statusMessage; // New
    private bool isSuccess;       // New

    protected override async Task OnInitializedAsync()
    {
        try
        {
            roles = await RoleService.GetRolesAsync();
        }
        catch (Exception ex)
        {
            statusMessage = $"Error al cargar los roles: {ex.Message}";
            isSuccess = false;
        }
    }

    private async Task HandleAddRole()
    {
        try
        {
            await RoleService.CreateRoleAsync(newRole);
            isSuccess = true;
            statusMessage = "Rol añadido exitosamente!";
            newRole = new();
            roles = await RoleService.GetRolesAsync();
        }
        catch (Exception ex)
        {
            statusMessage = $"Error al añadir el rol: {ex.Message}";
            isSuccess = false;
        }
    }

    private async Task HandleDeleteRole(Guid id)
    {
        try
        {
            await RoleService.DeleteRoleAsync(id);
            isSuccess = true;
            statusMessage = "Rol desactivado exitosamente!";
            roles = await RoleService.GetRolesAsync();
        }
        catch (Exception ex)
        {
            statusMessage = $"Error al desactivar el rol: {ex.Message}";
            isSuccess = false;
        }
    }

    private void ClearStatusMessage()
    {
        statusMessage = null;
        isSuccess = false;
    }
}