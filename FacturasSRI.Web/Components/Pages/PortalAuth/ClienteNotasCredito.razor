@page "/cliente/notas-credito"
@attribute [Authorize(Policy = "IsCustomer")]
@using FacturasSRI.Application.Dtos
@using FacturasSRI.Application.Interfaces
@using FacturasSRI.Domain.Enums
@using FacturasSRI.Web.Components.Shared
@inject ICreditNoteService CreditNoteService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation

<PageTitle>Mis Notas de Crédito</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1>Mis Notas de Crédito</h1>
        <p class="text-muted mb-0">Consulte el historial de sus notas de crédito emitidas.</p>
    </div>
</div>

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <div class="row g-2">
            <div class="col-md-4">
                <input type="text" class="form-control" placeholder="Buscar por Nro. de NC o Factura..."
                       @bind="searchTerm" @bind:event="oninput" @onkeyup="OnFilterChanged" />
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

@if (paginatedCreditNotes == null && string.IsNullOrEmpty(errorMessage))
{
    <p><em>Cargando notas de crédito...</em></p>
}
else if (paginatedCreditNotes != null)
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Nro. Nota de Crédito</th>
                    <th>Fecha Emisión</th>
                    <th>Factura Modificada</th>
                    <th>Motivo</th>
                    <th class="text-end">Total</th>
                    <th>Estado</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var nc in paginatedCreditNotes.Items)
                {
                    <tr>
                        <td class="fw-medium">@nc.NumeroNotaCredito</td>
                        <td>@nc.FechaEmision.ToString("dd/MM/yyyy")</td>
                        <td>@nc.NumeroFacturaModificada</td>
                        <td>@nc.RazonModificacion</td>
                        <td class="text-end fw-bold">@nc.Total.ToString("C")</td>
                        <td><span class="badge @GetStatusBadgeClass(nc.Estado)">@nc.Estado</span></td>
                        <td class="text-end">
                            <div class="btn-group shadow-sm" role="group">
                                <button class="btn btn-sm btn-outline-secondary" @onclick="() => ViewDetails(nc.Id)" title="Ver Detalles">
                                    <i class="bi bi-eye-fill"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-3">
        @if (paginatedCreditNotes.TotalCount > 0)
        {
            <p class="text-muted mb-0 small">
                Mostrando del @((currentPage - 1) * pageSize + 1) al @Math.Min(currentPage * pageSize, paginatedCreditNotes.TotalCount) de @paginatedCreditNotes.TotalCount registros.
            </p>
            <Pagination CurrentPage="currentPage" 
                        TotalPages="paginatedCreditNotes.TotalPages" 
                        OnPageSelected="SelectedPage" />
        }
        else
        {
            <p class="text-muted mb-0 small">No se encontraron notas de crédito.</p>
        }
    </div>
}

@code {
    private PaginatedList<CreditNoteDto>? paginatedCreditNotes;
    private string? errorMessage;
    private Guid clienteId;

    private int currentPage = 1;
    private int pageSize = 15;
    private string searchTerm = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        if (user.Identity != null && user.Identity.IsAuthenticated)
        {
            var clienteIdClaim = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier);
            if(clienteIdClaim != null && Guid.TryParse(clienteIdClaim.Value, out clienteId))
            {
                await LoadCreditNotes(1);
            }
            else
            {
                errorMessage = "No se pudo identificar su cuenta de cliente.";
            }
        }
        else
        {
            errorMessage = "Debe iniciar sesión para ver sus notas de crédito.";
        }
    }

    private async Task LoadCreditNotes(int page)
    {
        currentPage = page;
        errorMessage = null;
        try
        {
            paginatedCreditNotes = await CreditNoteService.GetCreditNotesByClientIdAsync(clienteId, currentPage, pageSize, searchTerm);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar las notas de crédito: {ex.Message}";
        }
        StateHasChanged();
    }

    private async Task OnFilterChanged() => await LoadCreditNotes(1);
    private async Task SelectedPage(int page) => await LoadCreditNotes(page);

    private void ViewDetails(Guid creditNoteId)
    {
        // Navigation.NavigateTo($"/cliente/notas-credito/{creditNoteId}");
    }

    private string GetStatusBadgeClass(EstadoNotaDeCredito status)
    {
        return status switch
        {
            EstadoNotaDeCredito.Autorizada => "bg-success",
            EstadoNotaDeCredito.RechazadaSRI => "bg-danger",
            _ => "bg-secondary",
        };
    }
}
