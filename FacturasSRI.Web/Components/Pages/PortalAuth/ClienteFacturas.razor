@page "/cliente/facturas"
@attribute [Authorize(Policy = "IsCustomer")]
@using FacturasSRI.Application.Dtos
@using FacturasSRI.Application.Interfaces
@using FacturasSRI.Domain.Enums
@using FacturasSRI.Web.Components.Shared
@inject IInvoiceService InvoiceService
@inject IStripePaymentService StripePaymentService 
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IJSRuntime JS 
@inject ITimeZoneHelper TimeZoneHelper

<PageTitle>Mis Facturas</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1>Mis Facturas</h1>
        <p class="text-muted mb-0">Aquí puede ver el historial de sus facturas.</p>
    </div>
</div>

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <div class="row g-3 align-items-end">
            <div class="col-lg col-md-4">
                <label for="search-invoice" class="form-label fw-bold mb-1">Búsqueda</label>
                <input type="text" class="form-control" placeholder="Por Nro. de factura..."
                       @bind="searchTerm" @bind:event="oninput" @onkeyup="OnFilterChanged" id="search-invoice" />
            </div>
            <div class="col-lg-2 col-md-4">
                <label for="payment-status" class="form-label fw-bold mb-1">Estado de Pago</label>
                <InputSelect class="form-select" @bind-Value="paymentStatus" @bind-Value:after="OnFilterChanged" id="payment-status">
                    <option value="All">Todos los Pagos</option>
                    <option value="Pending">Pendientes</option>
                    <option value="Paid">Pagadas</option>
                </InputSelect>
            </div>
            <div class="col-lg-2 col-md-4">
                <label for="payment-method" class="form-label fw-bold mb-1">Forma de Pago</label>
                <InputSelect class="form-select" @bind-Value="selectedFormaDePago" @bind-Value:after="OnFilterChanged" id="payment-method">
                    <option value="">Toda Forma de Pago</option>
                    <option value="@FormaDePago.Contado">Contado</option>
                    <option value="@FormaDePago.Credito">Crédito</option>
                </InputSelect>
            </div>
            <div class="col-lg-2 col-md-4">
                <label for="start-date" class="form-label fw-bold mb-1">Fecha de Inicio</label>
                <InputDate class="form-control" @bind-Value="startDate" @bind-Value:after="OnFilterChanged" id="start-date" />
            </div>
            <div class="col-lg-2 col-md-4">
                <label for="end-date" class="form-label fw-bold mb-1">Fecha de Fin</label>
                <InputDate class="form-control" @bind-Value="endDate" @bind-Value:after="OnFilterChanged" id="end-date" />
            </div>
            <div class="col-md-auto">
                <button class="btn btn-outline-secondary w-100" @onclick="ClearFilters">Limpiar</button>
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

@if (paginatedInvoices == null && string.IsNullOrEmpty(errorMessage))
{
    <p><em>Cargando facturas...</em></p>
}
else if (paginatedInvoices != null)
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Nro. Factura</th>
                    <th>Fecha Emisión</th>
                    <th>Estado</th>
                    <th class="text-end">Total</th>
                    <th class="text-end">Saldo Pendiente</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var invoice in paginatedInvoices.Items)
                {
                    <tr>
                        <td class="fw-medium">@invoice.NumeroFactura</td>
                        <td>@TimeZoneHelper.ConvertUtcToEcuadorTime(invoice.FechaEmision).ToString("dd/MM/yyyy")</td>
                        <td>
                            <span class="badge @GetStatusBadgeClass(invoice.Estado)">@GetDisplayStatus(invoice.Estado)</span>
                        </td>
                        <td class="text-end">@invoice.Total.ToString("C")</td>
                        <td class="text-end fw-bold @(invoice.SaldoPendiente > 0 ? "text-danger" : "text-success")">
                            @invoice.SaldoPendiente.ToString("C")
                        </td>
                        <td class="text-end">
                        <div class="btn-group shadow-sm" role="group">
                            @if (invoice.SaldoPendiente > 0 && 
                                invoice.Estado != EstadoFactura.Cancelada && 
                                invoice.Estado != EstadoFactura.RechazadaSRI &&
                                invoice.Estado != EstadoFactura.Borrador)
                            {
                                <button class="btn btn-sm btn-success" 
                                        @onclick="() => PayWithStripe(invoice)" 
                                        title="Pagar con Tarjeta"
                                        disabled="@isProcessingPayment">
                                    @if (isProcessingPayment && currentPaymentId == invoice.Id)
                                    {
                                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-credit-card-2-front-fill"></i>
                                    }
                                </button>
                            }

                            <button class="btn btn-sm btn-outline-secondary" @onclick="() => ViewDetails(invoice.Id)" title="Ver Detalles">
                                <i class="bi bi-eye-fill"></i>
                            </button>
                            <a href="/api/public/invoice-ride/@invoice.Id" target="_blank" class="btn btn-sm btn-outline-danger" title="Descargar PDF">
                                <i class="bi bi-file-earmark-pdf-fill"></i>
                            </a>
                        </div>
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-3">
        @if (paginatedInvoices.TotalCount > 0)
        {
            <p class="text-muted mb-0 small">
                Mostrando del @((currentPage - 1) * pageSize + 1) al @Math.Min(currentPage * pageSize, paginatedInvoices.TotalCount) de @paginatedInvoices.TotalCount registros.
            </p>
            <Pagination CurrentPage="currentPage" 
                        TotalPages="paginatedInvoices.TotalPages" 
                        OnPageSelected="SelectedPage" />
        }
        else
        {
            <p class="text-muted mb-0 small">No se encontraron facturas con los filtros seleccionados.</p>
        }
    </div>
}

@code {
    private PaginatedList<InvoiceDto>? paginatedInvoices;
    private string? errorMessage;
    private Guid clienteId;

    private int currentPage = 1;
    private int pageSize = 15;

    // Nuevos filtros
    private string searchTerm = string.Empty;
    private string paymentStatus = "All";
    private FormaDePago? selectedFormaDePago;
    private DateTime? startDate;
    private DateTime? endDate;

    private bool isProcessingPayment = false;
    private Guid? currentPaymentId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        if (user.Identity != null && user.Identity.IsAuthenticated)
        {
            var clienteIdClaim = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier);
            if(clienteIdClaim != null && Guid.TryParse(clienteIdClaim.Value, out clienteId))
            {
                await LoadInvoices(1);
            }
            else
            {
                errorMessage = "No se pudo identificar su cuenta de cliente.";
            }
        }
        else
        {
            errorMessage = "Debe iniciar sesión para ver sus facturas.";
        }
    }

    private async Task LoadInvoices(int page)
    {
        currentPage = page;
        errorMessage = null;
        try
        {
            var startDateUtc = startDate.HasValue ? startDate.Value.ToUniversalTime() : (DateTime?)null;
            var endDateUtc = endDate.HasValue ? endDate.Value.ToUniversalTime() : (DateTime?)null;
            paginatedInvoices = await InvoiceService.GetInvoicesByClientIdAsync(clienteId, currentPage, pageSize, paymentStatus, selectedFormaDePago, startDateUtc, endDateUtc, searchTerm, EstadoFactura.Autorizada);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar las facturas: {ex.Message}";
        }
        StateHasChanged();
    }

    private async Task OnFilterChanged()
    {
        await LoadInvoices(1);
    }
    
    private async Task ClearFilters()
    {
        searchTerm = string.Empty;
        paymentStatus = "All";
        selectedFormaDePago = null;
        startDate = null;
        endDate = null;
        await LoadInvoices(1);
    }

    private async Task SelectedPage(int page)
    {
        await LoadInvoices(page);
    }

    private void ViewDetails(Guid invoiceId)
    {
        Navigation.NavigateTo($"/cliente/facturas/{invoiceId}");
    }
    
    private string GetDisplayStatus(EstadoFactura status)
    {
        return status switch
        {
            EstadoFactura.EnviadaSRI => "Enviada al SRI",
            EstadoFactura.RechazadaSRI => "Rechazada por SRI",
            _ => status.ToString(),
        };
    }

    private async Task PayWithStripe(InvoiceDto invoice)
    {
        try
        {
            isProcessingPayment = true;
            currentPaymentId = invoice.Id;
            StateHasChanged();

            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            var userIdStr = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

            if (string.IsNullOrEmpty(userIdStr) || !Guid.TryParse(userIdStr, out Guid userId))
            {
                errorMessage = "No se pudo identificar su usuario para procesar el pago.";
                return;
            }

            // Construir URLs de retorno
            // NOTA: Usamos Navigation.BaseUri para asegurar que funcione en local y producción
            var successUrl = $"{Navigation.BaseUri}cliente/pago-exitoso?facturaId={invoice.Id}";
            var cancelUrl = $"{Navigation.BaseUri}cliente/facturas";

            // Crear sesión de Stripe
            var checkoutUrl = await StripePaymentService.CreateCheckoutSessionAsync(invoice, successUrl, cancelUrl, userId);

            // Redirigir a Stripe
            Navigation.NavigateTo(checkoutUrl, forceLoad: true); 
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al iniciar el pago: {ex.Message}";
        }
        finally
        {
            isProcessingPayment = false;
            currentPaymentId = null;
        }
    }

    private string GetStatusBadgeClass(EstadoFactura status)
    {
        return status switch
        {
            EstadoFactura.Pendiente => "bg-warning text-dark",
            EstadoFactura.EnviadaSRI => "bg-info text-dark",
            EstadoFactura.Autorizada => "bg-success",
            EstadoFactura.RechazadaSRI => "bg-danger",
            _ => "bg-secondary",
        };
    }
}
