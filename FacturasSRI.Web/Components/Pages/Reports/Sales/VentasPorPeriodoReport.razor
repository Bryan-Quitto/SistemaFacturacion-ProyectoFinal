@page "/reports/sales/by-period"
@using Microsoft.AspNetCore.Authorization
@using System.Globalization
@using System.Security.Claims
@using FacturasSRI.Application.Dtos
@using FacturasSRI.Application.Dtos.Reports
@using FacturasSRI.Application.Interfaces
@inject IReportService ReportService
@inject IUserService UserService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IJSRuntime JSRuntime
@inject ITimeZoneHelper TimeZoneHelper

@attribute [Authorize(Roles = "Administrador, Vendedor")]

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h4 class="m-0 font-weight-bold text-primary">Reporte de Ventas por Período</h4>
            <p class="text-muted mb-0">Agrupa las ventas por día y muestra los totales consolidados.</p>
        </div>
        <div class="card-body">
            @* Fila de Filtros *@
            <div class="row align-items-end mb-3">
                
                @* 1. Fecha Inicio *@
                <div class="@ColumnClass">
                    <label for="startDate" class="form-label">Fecha de Inicio</label>
                    <input type="date" id="startDate" class="form-control" @bind="startDate" />
                </div>

                @* 2. Fecha Fin *@
                <div class="@ColumnClass">
                    <label for="endDate" class="form-label">Fecha de Fin</label>
                    <input type="date" id="endDate" class="form-control" @bind="endDate" />
                </div>

                @* 3. Filtro de Usuario (SOLO ADMIN) *@
                @if (isAdmin)
                {
                    <div class="@ColumnClass">
                        <label for="userFilter" class="form-label">Filtrar por Usuario</label>
                        <select id="userFilter" class="form-select" @bind="selectedFilterUserId">
                            <option value="">-- Todos los Usuarios --</option>
                            @if (usersList != null)
                            {
                                foreach (var user in usersList)
                                {
                                    <option value="@user.Id">@user.PrimerNombre @user.PrimerApellido</option>
                                }
                            }
                        </select>
                    </div>
                }

                @* 4. Botones de Acción *@
                <div class="@ColumnClass d-flex align-items-end">
                    <button class="btn btn-primary me-2 w-100" @onclick="GenerateReport" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        }
                        else
                        {
                            <i class="bi bi-search me-1"></i>
                            <span>Generar</span>
                        }
                    </button>
                    
                    @if (reportData != null && reportData.Any())
                    {
                        <button class="btn btn-danger w-100" @onclick="DownloadPdf" disabled="@isDownloading">
                            @if (isDownloading)
                            {
                                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            }
                            else
                            {
                                <i class="bi bi-file-earmark-pdf me-2"></i><span>Descargar PDF</span>
                            }
                        </button>
                    }
                </div>
            </div>

            @if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Error:</strong> @errorMessage
                </div>
            }

            @if (reportData != null)
            {
                if (!reportData.Any())
                {
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        No se encontraron datos de ventas para el período seleccionado.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover" id="reportTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>Fecha</th>
                                    <th>Resp.</th>
                                    <th class="text-end">Facturas Emitidas</th>
                                    <th class="text-end">Subtotal</th>
                                    <th class="text-end">Total IVA</th>
                                    <th class="text-end">Total Vendido</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in reportData)
                                {
                                    <tr>
                                        <td>@TimeZoneHelper.ConvertUtcToEcuadorTime(item.Fecha).ToString("dd/MM/yyyy")</td>
                                        <td>@item.Vendedor</td>
                                        <td class="text-end">@item.CantidadFacturas</td>
                                        <td class="text-end">@item.Subtotal.ToString("C", esEcCulture)</td>
                                        <td class="text-end">@item.TotalIva.ToString("C", esEcCulture)</td>
                                        <td class="text-end">@item.Total.ToString("C", esEcCulture)</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-primary">
                                    <td colspan="2" class="text-end font-weight-bold"><strong>Totales:</strong></td>
                                    <td class="text-end font-weight-bold"><strong>@reportData.Sum(x => x.CantidadFacturas)</strong></td>
                                    <td class="text-end font-weight-bold"><strong>@reportData.Sum(x => x.Subtotal).ToString("C", esEcCulture)</strong></td>
                                    <td class="text-end font-weight-bold"><strong>@reportData.Sum(x => x.TotalIva).ToString("C", esEcCulture)</strong></td>
                                    <td class="text-end font-weight-bold"><strong>@reportData.Sum(x => x.Total).ToString("C", esEcCulture)</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    // Variables de Filtro
    private DateTime startDate = DateTime.Now.AddMonths(-1).Date;
    private DateTime endDate = DateTime.Now.Date;
    
    // Variables de Usuario y Roles
    private bool isAdmin = false;
    private Guid? loggedUserId; // ID del usuario conectado
    private Guid? selectedFilterUserId; // ID seleccionado en el dropdown (solo Admin)
    private List<UserDto>? usersList; // Lista para el dropdown

    // Variables de Estado y Datos
    private IEnumerable<VentasPorPeriodoDto>? reportData;
    private bool isLoading = false;
    private bool isDownloading = false;
    private string? errorMessage;
    private readonly CultureInfo esEcCulture = new CultureInfo("es-EC");

    // Ajuste dinámico de columnas de Bootstrap
    private string ColumnClass => isAdmin ? "col-md-3" : "col-md-4";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity != null && user.Identity.IsAuthenticated)
            {
                isAdmin = user.IsInRole("Administrador");
                
                var userIdClaim = user.FindFirst(ClaimTypes.NameIdentifier);
                if (Guid.TryParse(userIdClaim?.Value, out var id))
                {
                    loggedUserId = id;
                }

                // Si es Admin, cargamos la lista y FILTRAMOS para sacar a los bodegueros
                if (isAdmin)
                {
                    var allUsers = await UserService.GetActiveUsersAsync();
                    
                    // Solo mostramos usuarios que tengan rol de Vendedor o Administrador
                    usersList = allUsers
                        .Where(u => u.Roles.Contains("Vendedor") || u.Roles.Contains("Administrador"))
                        .OrderBy(u => u.PrimerNombre)
                        .ToList();
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar permisos: {ex.Message}";
        }
    }

    private Guid? GetQueryUserId()
    {
        // Lógica Core:
        // Si es Admin: Devuelve lo que haya seleccionado en el dropdown (puede ser un ID o null para "todos")
        // Si NO es Admin (Vendedor): Devuelve forzosamente su propio ID.
        return isAdmin ? selectedFilterUserId : loggedUserId;
    }

    private async Task GenerateReport()
    {
        isLoading = true;
        errorMessage = null;
        reportData = null;

        if (startDate > endDate)
        {
            errorMessage = "La fecha de inicio no puede ser posterior a la fecha de fin.";
            isLoading = false;
            return;
        }

        try
        {
            // Usamos la lógica centralizada para obtener el ID
            var queryUserId = GetQueryUserId();

            reportData = await ReportService.GetVentasPorPeriodoAsync(startDate, endDate, queryUserId);
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error al generar el reporte: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DownloadPdf()
    {
        isDownloading = true;
        errorMessage = null;

        try
        {
            var queryUserId = GetQueryUserId();

            var pdfBytes = await ReportService.GetVentasPorPeriodoAsPdfAsync(startDate, endDate, queryUserId);

            if (pdfBytes.Length == 0)
            {
                errorMessage = "No se encontraron datos para generar el PDF.";
                isDownloading = false;
                return;
            }

            var fileName = $"Reporte_Ventas_Periodo_{startDate:yyyyMMdd}-{endDate:yyyyMMdd}.pdf";
            var fileStream = new MemoryStream(pdfBytes);
            using var streamRef = new DotNetStreamReference(stream: fileStream);
            await JSRuntime.InvokeVoidAsync("downloadFileFromStream", fileName, streamRef);
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error al descargar el PDF: {ex.Message}";
        }
        finally
        {
            isDownloading = false;
        }
    }
}