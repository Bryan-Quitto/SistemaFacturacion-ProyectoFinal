@page "/reports/sales/accounts-receivable"
@using Microsoft.AspNetCore.Authorization
@using System.Globalization
@using System.Security.Claims
@using FacturasSRI.Application.Dtos.Reports
@using FacturasSRI.Application.Interfaces
@using Microsoft.JSInterop
@inject IReportService ReportService
@inject IJSRuntime JSRuntime
@inject AuthenticationStateProvider AuthenticationStateProvider

@attribute [Authorize(Roles = "Administrador, Vendedor")]

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <div>
                <h4 class="m-0 font-weight-bold text-primary">Reporte de Cuentas por Cobrar</h4>
                <p class="text-muted mb-0">Muestra todas las facturas con saldos pendientes de pago.</p>
            </div>
            <div>
                <button class="btn btn-primary me-2" @onclick="GenerateReport" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm"></span>
                        <span>Actualizando...</span>
                    }
                    else
                    {
                        <i class="bi bi-arrow-clockwise me-1"></i>
                        <span>Actualizar</span>
                    }
                </button>
                @if (reportData != null && reportData.Any())
                {
                    <button class="btn btn-info" @onclick="DownloadPdf" disabled="@isDownloading">
                        @if (isDownloading)
                        {
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            <span class="ms-1">Descargando...</span>
                        }
                        else
                        {
                            <i class="bi bi-file-earmark-pdf me-1"></i>
                            <span>Descargar PDF</span>
                        }
                    </button>
                }
            </div>
        </div>
        <div class="card-body">
            @if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Error:</strong> @errorMessage
                </div>
            }

            @if (reportData != null)
            {
                if (!reportData.Any())
                {
                    <div class="alert alert-success" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        ¡Excelente! No hay cuentas por cobrar pendientes.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Cliente</th>
                                    <th>Factura #</th>
                                    <th>Vendedor</th>
                                    <th>Fecha Emisión</th>
                                    <th class="text-end">Días Vencida</th>
                                    <th class="text-end">Monto Factura</th>
                                    <th class="text-end">Monto Pagado</th>
                                    <th class="text-end">Saldo Pendiente</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in reportData.OrderByDescending(x => x.DiasVencida))
                                {
                                    <tr class="@(item.DiasVencida > 30 ? "table-danger" : item.DiasVencida > 15 ? "table-warning" : "")">
                                        <td>@item.NombreCliente</td>
                                        <td>@item.NumeroFactura</td>
                                        <td>@item.Vendedor</td>
                                        <td>@item.FechaEmision.ToString("dd/MM/yyyy")</td>
                                        <td class="text-end">@item.DiasVencida</td>
                                        <td class="text-end">@item.MontoFactura.ToString("C", esEcCulture)</td>
                                        <td class="text-end">@item.MontoPagado.ToString("C", esEcCulture)</td>
                                        <td class="text-end font-weight-bold">@item.SaldoPendiente.ToString("C", esEcCulture)</td>
                                    </tr>
                                }
                            </tbody>
                             <tfoot>
                                <tr class="table-primary">
                                    <td colspan="7" class="text-end font-weight-bold"><strong>Total Pendiente:</strong></td>
                                    <td class="text-end font-weight-bold"><strong>@reportData.Sum(x => x.SaldoPendiente).ToString("C", esEcCulture)</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    private IEnumerable<CuentasPorCobrarDto>? reportData;
    private bool isLoading = false;
    private bool isDownloading = false;
    private string? errorMessage;
    private readonly CultureInfo esEcCulture = new CultureInfo("es-EC");

    protected override async Task OnInitializedAsync()
    {
        await GenerateReport();
    }

    private async Task GenerateReport()
    {
        isLoading = true;
        errorMessage = null;
        
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            var userIdClaim = user.FindFirst(ClaimTypes.NameIdentifier);
            var userId = Guid.TryParse(userIdClaim?.Value, out var id) ? (Guid?)id : null;
            var finalUserId = user.IsInRole("Administrador") ? null : userId;

            reportData = await ReportService.GetCuentasPorCobrarAsync(finalUserId);
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error al generar el reporte: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DownloadPdf()
    {
        isDownloading = true;
        errorMessage = null;

        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            var userIdClaim = user.FindFirst(ClaimTypes.NameIdentifier);
            var userId = Guid.TryParse(userIdClaim?.Value, out var id) ? (Guid?)id : null;
            var finalUserId = user.IsInRole("Administrador") ? null : userId;

            var pdfBytes = await ReportService.GetCuentasPorCobrarAsPdfAsync(finalUserId);

            if (pdfBytes.Length == 0)
            {
                errorMessage = "No se encontraron datos para generar el PDF.";
                isDownloading = false;
                return;
            }

            var fileName = $"Reporte_Cuentas_Por_Cobrar_{DateTime.Now:yyyyMMdd}.pdf";
            var fileStream = new MemoryStream(pdfBytes);
            using var streamRef = new DotNetStreamReference(stream: fileStream);
            await JSRuntime.InvokeVoidAsync("downloadFileFromStream", fileName, streamRef);
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error al descargar el PDF: {ex.Message}";
        }
        finally
        {
            isDownloading = false;
        }
    }
}