@page "/reports/sales/accounts-receivable"
@using Microsoft.AspNetCore.Authorization
@using System.Globalization
@using System.Security.Claims
@using FacturasSRI.Application.Dtos
@using FacturasSRI.Application.Dtos.Reports
@using FacturasSRI.Application.Interfaces
@using Microsoft.JSInterop
@inject IReportService ReportService
@inject IUserService UserService
@inject IJSRuntime JSRuntime
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ITimeZoneHelper TimeZoneHelper

@attribute [Authorize(Roles = "Administrador, Vendedor")]

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h4 class="m-0 font-weight-bold text-primary">Reporte de Cuentas por Cobrar</h4>
            <p class="text-muted mb-0">Muestra todas las facturas con saldos pendientes de pago.</p>
        </div>
        <div class="card-body">
            <div class="row align-items-end mb-3">
                @if (isAdmin)
                {
                    <div class="col-md-6">
                        <label for="userFilter" class="form-label">Filtrar por Vendedor</label>
                        <select id="userFilter" class="form-select" @bind="selectedFilterUserId">
                            <option value="">-- Todos los Vendedores --</option>
                            @if (usersList != null)
                            {
                                foreach (var user in usersList)
                                {
                                    <option value="@user.Id">@user.PrimerNombre @user.PrimerApellido</option>
                                }
                            }
                        </select>
                    </div>
                }
                <div class="@(isAdmin ? "col-md-6" : "col-md-12") d-flex justify-content-end gap-2">
                    <button class="btn btn-primary flex-grow-1 text-nowrap" @onclick="GenerateReport" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm"></span>
                            <span>Actualizando...</span>
                        }
                        else
                        {
                            <i class="bi bi-arrow-clockwise me-1"></i>
                            <span>Actualizar</span>
                        }
                    </button>
                    @if (reportData != null && reportData.Any())
                    {
                        <button class="btn btn-danger flex-grow-1 text-nowrap" @onclick="DownloadPdf" disabled="@isDownloading">
                            @if (isDownloading)
                            {
                                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            }
                            else
                            {
                                <i class="bi bi-file-earmark-pdf me-2"></i><span>Desc. PDF</span>
                            }
                        </button>
                    }
                </div>
            </div>

            @if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Error:</strong> @errorMessage
                </div>
            }

            @if (reportData != null)
            {
                if (!reportData.Any())
                {
                    <div class="alert alert-success" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        ¡Excelente! No hay cuentas por cobrar pendientes.
                    </div>
                }
                else
                {
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                                <input type="text" class="form-control" placeholder="Buscar en resultados..." 
                                    @bind="searchText" @bind:event="oninput" />
                                @if (!string.IsNullOrEmpty(searchText))
                                {
                                    <button class="btn btn-outline-secondary" @onclick="() => searchText = string.Empty">
                                        <i class="bi bi-x"></i>
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Fecha Emisión</th>
                                    <th>Resp.</th>
                                    <th>Cliente</th>
                                    <th>Factura #</th>
                                    <th class="text-end">Días Vencida</th>
                                    <th class="text-end">Monto Factura</th>
                                    <th class="text-end">Monto Pagado</th>
                                    <th class="text-end">Saldo Pendiente</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!FilteredData.Any() && reportData.Any())
                                {
                                    <tr>
                                        <td colspan="8" class="text-center text-muted">No hay coincidencias con la búsqueda.</td>
                                    </tr>
                                }
                                @foreach (var item in FilteredData.OrderByDescending(x => x.DiasVencida))
                                {
                                    <tr class="@(item.DiasVencida > 30 ? "table-danger" : item.DiasVencida > 15 ? "table-warning" : "")">
                                        <td>@TimeZoneHelper.ConvertUtcToEcuadorTime(DateTime.SpecifyKind(item.FechaEmision, DateTimeKind.Utc)).ToString("dd/MM/yyyy")</td>
                                        <td>@item.Vendedor</td>
                                        <td>@item.NombreCliente</td>
                                        <td>@item.NumeroFactura</td>
                                        <td class="text-end">@item.DiasVencida</td>
                                        <td class="text-end">@item.MontoFactura.ToString("C", esEcCulture)</td>
                                        <td class="text-end">@item.MontoPagado.ToString("C", esEcCulture)</td>
                                        <td class="text-end font-weight-bold">@item.SaldoPendiente.ToString("C", esEcCulture)</td>
                                    </tr>
                                }
                            </tbody>
                             <tfoot>
                                <tr class="table-primary">
                                    <td colspan="7" class="text-end font-weight-bold"><strong>Total Pendiente:</strong></td>
                                    <td class="text-end font-weight-bold"><strong>@((reportData?.Sum(x => x.SaldoPendiente) ?? 0).ToString("C", esEcCulture))</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    private string searchText = "";

    private IEnumerable<CuentasPorCobrarDto> FilteredData
    {
        get
        {
            if (reportData == null) return new List<CuentasPorCobrarDto>();
            if (string.IsNullOrWhiteSpace(searchText)) return reportData;

            var lowerSearchText = searchText.ToLowerInvariant();

            return reportData.Where(item =>
                (item.Vendedor?.ToLowerInvariant().Contains(lowerSearchText) ?? false) ||
                (item.NombreCliente?.ToLowerInvariant().Contains(lowerSearchText) ?? false) ||
                (item.NumeroFactura?.ToLowerInvariant().Contains(lowerSearchText) ?? false)
            );
        }
    }

    private bool isAdmin = false;
    private Guid? loggedUserId;
    private Guid? selectedFilterUserId;
    private List<UserDto>? usersList;
    private IEnumerable<CuentasPorCobrarDto>? reportData;
    private bool isLoading = false;
    private bool isDownloading = false;
    private string? errorMessage;
    private readonly CultureInfo esEcCulture = new CultureInfo("es-EC");

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity != null && user.Identity.IsAuthenticated)
            {
                isAdmin = user.IsInRole("Administrador");
                
                var userIdClaim = user.FindFirst(ClaimTypes.NameIdentifier);
                if (Guid.TryParse(userIdClaim?.Value, out var id))
                {
                    loggedUserId = id;
                }

                if (isAdmin)
                {
                    var allUsers = await UserService.GetActiveUsersAsync();
                    usersList = allUsers
                        .Where(u => u.Roles.Contains("Vendedor") || u.Roles.Contains("Administrador"))
                        .OrderBy(u => u.PrimerNombre)
                        .ToList();
                }
            }
            await GenerateReport();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar: {ex.Message}";
        }
    }

    private Guid? GetQueryUserId()
    {
        return isAdmin ? selectedFilterUserId : loggedUserId;
    }

    private async Task GenerateReport()
    {
        isLoading = true;
        errorMessage = null;
        
        try
        {
            var queryUserId = GetQueryUserId();
            reportData = await ReportService.GetCuentasPorCobrarAsync(queryUserId);
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error al generar el reporte: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DownloadPdf()
    {
        isDownloading = true;
        errorMessage = null;

        try
        {
            var queryUserId = GetQueryUserId();
            var pdfBytes = await ReportService.GetCuentasPorCobrarAsPdfAsync(queryUserId);

            if (pdfBytes.Length == 0)
            {
                errorMessage = "No se encontraron datos para generar el PDF.";
                isDownloading = false;
                return;
            }

            var fileName = $"Reporte_Cuentas_Por_Cobrar_{DateTime.Now:yyyyMMdd}.pdf";
            var fileStream = new MemoryStream(pdfBytes);
            using var streamRef = new DotNetStreamReference(stream: fileStream);
            await JSRuntime.InvokeVoidAsync("downloadFileFromStream", fileName, streamRef);
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error al descargar el PDF: {ex.Message}";
        }
        finally
        {
            isDownloading = false;
        }
    }
}