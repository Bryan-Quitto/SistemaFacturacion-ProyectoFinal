@page "/reports/sales/by-product"
@using Microsoft.AspNetCore.Authorization
@using System.Globalization
@using System.Security.Claims
@using FacturasSRI.Application.Dtos
@using FacturasSRI.Application.Dtos.Reports
@using FacturasSRI.Application.Interfaces
@using Microsoft.JSInterop
@using Microsoft.Extensions.Logging 
@inject IReportService ReportService
@inject IUserService UserService
@inject IJSRuntime JSRuntime
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ITimeZoneHelper TimeZoneHelper
@inject ILogger<VentasPorProductoReport> Logger

@attribute [Authorize(Roles = "Administrador, Vendedor")]

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h4 class="m-0 font-weight-bold text-primary">Reporte de Ventas por Producto</h4>
            <p class="text-muted mb-0">Muestra un resumen de las ventas agrupadas por producto en un período de tiempo.</p>
        </div>
        <div class="card-body">
            @* Filtros *@
            <div class="row align-items-end mb-3">
                
                @* 1. Fecha Inicio *@
                <div class="@ColumnClass">
                    <label for="startDate" class="form-label">Fecha de Inicio</label>
                    <input type="date" id="startDate" class="form-control" @bind="startDate" />
                </div>

                @* 2. Fecha Fin *@
                <div class="@ColumnClass">
                    <label for="endDate" class="form-label">Fecha de Fin</label>
                    <input type="date" id="endDate" class="form-control" @bind="endDate" />
                </div>

                @* 3. Filtro de Usuario (SOLO ADMIN) *@
                @if (isAdmin)
                {
                    <div class="@ColumnClass">
                        <label for="userFilter" class="form-label">Filtrar por Vendedor</label>
                        <select id="userFilter" class="form-select" @bind="selectedFilterUserId">
                            <option value="">-- Todos los Vendedores --</option>
                            @if (usersList != null)
                            {
                                foreach (var user in usersList)
                                {
                                    <option value="@user.Id">@user.PrimerNombre @user.PrimerApellido</option>
                                }
                            }
                        </select>
                    </div>
                }

                @* 4. Botones *@
                <div class="@ColumnClass d-flex align-items-end">
                    <button class="btn btn-primary me-2 w-100" @onclick="GenerateReport" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm"></span>
                        }
                        else
                        {
                            <i class="bi bi-search me-1"></i>
                            <span>Generar</span>
                        }
                    </button>
                    @if (reportData != null && reportData.Any())
                    {
                        <button class="btn btn-danger w-100" @onclick="DownloadPdf" disabled="@isDownloading">
                            @if (isDownloading)
                            {
                                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            }
                            else
                            {
                                <i class="bi bi-file-earmark-pdf me-2"></i><span>Descargar PDF</span>
                            }
                        </button>
                    }
                </div>
            </div>

            @if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Error:</strong> @errorMessage
                </div>
            }

            @if (reportData != null)
            {
                if (!reportData.Any())
                {
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        No se encontraron datos de ventas para el período seleccionado.
                    </div>
                }
                else
                {
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                                <input type="text" class="form-control" placeholder="Buscar en resultados..." 
                                    @bind="searchText" @bind:event="oninput" />
                                @if (!string.IsNullOrEmpty(searchText))
                                {
                                    <button class="btn btn-outline-secondary" @onclick="() => searchText = string.Empty">
                                        <i class="bi bi-x"></i>
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Fecha</th>
                                    <th>Resp.</th>
                                    <th>Código</th>
                                    <th>Producto</th>
                                    <th class="text-end">Cantidad Vendida</th>
                                    <th class="text-end">Precio Promedio</th>
                                    <th class="text-end">Total Vendido</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!FilteredData.Any() && reportData.Any())
                                {
                                    <tr>
                                        <td colspan="7" class="text-center text-muted">No hay coincidencias con la búsqueda.</td>
                                    </tr>
                                }
                                @foreach (var item in FilteredData)
                                {
                                    <tr>
                                        @* CORRECCIÓN VISUAL: La fecha que viene de la BD es UTC, pero EF a veces la trae Unspecified. La forzamos a UTC para mostrarla. *@
                                        <td>
                                            @(item.Fecha.Kind == DateTimeKind.Unspecified 
                                                ? item.Fecha.ToString("dd/MM/yyyy") // Si ya viene sin hora, mostrar directo
                                                : item.Fecha.ToString("dd/MM/yyyy")) 
                                        </td>
                                        <td>@item.Vendedor</td>
                                        <td>@item.CodigoProducto</td>
                                        <td>@item.NombreProducto</td>
                                        <td class="text-end">@item.CantidadVendida</td>
                                        <td class="text-end">@item.PrecioPromedio.ToString("C", esEcCulture)</td>
                                        <td class="text-end">@item.TotalVendido.ToString("C", esEcCulture)</td>
                                    </tr>
                                }
                            </tbody>
                             <tfoot>
                                <tr class="table-primary">
                                    <td colspan="4" class="text-end font-weight-bold"><strong>Totales:</strong></td>
                                    <td class="text-end font-weight-bold"><strong>@(reportData?.Sum(x => x.CantidadVendida) ?? 0)</strong></td>
                                    <td></td>
                                    <td class="text-end font-weight-bold"><strong>@(reportData?.Sum(x => x.TotalVendido).ToString("C", esEcCulture) ?? 0.ToString("C", esEcCulture))</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    private string searchText = "";

    private IEnumerable<VentasPorProductoDto> FilteredData
    {
        get
        {
            if (reportData == null) return new List<VentasPorProductoDto>();
            if (string.IsNullOrWhiteSpace(searchText)) return reportData;

            var lowerSearchText = searchText.ToLowerInvariant();

            return reportData.Where(item =>
                (item.Vendedor?.ToLowerInvariant().Contains(lowerSearchText) ?? false) ||
                (item.CodigoProducto?.ToLowerInvariant().Contains(lowerSearchText) ?? false) ||
                (item.NombreProducto?.ToLowerInvariant().Contains(lowerSearchText) ?? false) ||
                (item.Fecha.ToString("dd/MM/yyyy").Contains(lowerSearchText))
            );
        }
    }

    private DateTime startDate = DateTime.Today.AddMonths(-1).Date;
    private DateTime endDate = DateTime.Today;
    private bool isAdmin = false;
    private Guid? loggedUserId;
    private Guid? selectedFilterUserId;
    private List<UserDto>? usersList;
    private IEnumerable<VentasPorProductoDto>? reportData;
    private bool isLoading = false;
    private bool isDownloading = false;
    private string? errorMessage;
    private readonly CultureInfo esEcCulture = new CultureInfo("es-EC");
    private string ColumnClass => isAdmin ? "col-md-3" : "col-md-4";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity != null && user.Identity.IsAuthenticated)
            {
                isAdmin = user.IsInRole("Administrador");
                
                var userIdClaim = user.FindFirst(ClaimTypes.NameIdentifier);
                if (Guid.TryParse(userIdClaim?.Value, out var id))
                {
                    loggedUserId = id;
                }

                if (isAdmin)
                {
                    var allUsers = await UserService.GetActiveUsersAsync();
                    usersList = allUsers
                        .Where(u => u.Roles.Contains("Vendedor") || u.Roles.Contains("Administrador"))
                        .OrderBy(u => u.PrimerNombre)
                        .ToList();
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar permisos: {ex.Message}";
            Logger.LogError(ex, "Error en OnInitializedAsync");
        }
    }

    private Guid? GetQueryUserId()
    {
        return isAdmin ? selectedFilterUserId : loggedUserId;
    }

    private async Task GenerateReport()
    {
        isLoading = true;
        errorMessage = null;
        reportData = null;

        try
        {
            var queryUserId = GetQueryUserId();
            
            // SOLUCIÓN CLAVE: Forzar Unspecified antes de enviar al helper
            // Esto le dice al helper: "Toma esta fecha tal cual es (ej 00:00:00) y asume que es hora de Ecuador"
            var safeStartDate = DateTime.SpecifyKind(startDate, DateTimeKind.Unspecified);
            var safeEndDate = DateTime.SpecifyKind(endDate, DateTimeKind.Unspecified);

            // Ahora sí convertimos
            var utcStartDate = TimeZoneHelper.ConvertEcuadorToUtc(safeStartDate.Date);
            var utcEndDate = TimeZoneHelper.ConvertEcuadorToUtc(safeEndDate.Date.AddDays(1).AddTicks(-1));

            reportData = await ReportService.GetVentasPorProductoAsync(utcStartDate, utcEndDate, queryUserId);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al generar: {ex.Message}";
            Logger.LogError(ex, "Error en GenerateReport");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DownloadPdf()
    {
        isDownloading = true;
        errorMessage = null;

        try
        {
            var queryUserId = GetQueryUserId();
            
            // SOLUCIÓN CLAVE (Repetida para PDF)
            var safeStartDate = DateTime.SpecifyKind(startDate, DateTimeKind.Unspecified);
            var safeEndDate = DateTime.SpecifyKind(endDate, DateTimeKind.Unspecified);

            var utcStartDate = TimeZoneHelper.ConvertEcuadorToUtc(safeStartDate.Date);
            var utcEndDate = TimeZoneHelper.ConvertEcuadorToUtc(safeEndDate.Date.AddDays(1).AddTicks(-1));

            var pdfBytes = await ReportService.GetVentasPorProductoAsPdfAsync(utcStartDate, utcEndDate, queryUserId);

            if (pdfBytes.Length == 0)
            {
                errorMessage = "No se encontraron datos para generar el PDF.";
                isDownloading = false;
                return;
            }

            var fileName = $"Reporte_Ventas_Producto_{startDate:yyyyMMdd}-{endDate:yyyyMMdd}.pdf";
            var fileStream = new MemoryStream(pdfBytes);
            using var streamRef = new DotNetStreamReference(stream: fileStream);
            await JSRuntime.InvokeVoidAsync("downloadFileFromStream", fileName, streamRef);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al descargar el PDF: {ex.Message}";
            Logger.LogError(ex, "Error en DownloadPdf");
        }
        finally
        {
            isDownloading = false;
        }
    }
}