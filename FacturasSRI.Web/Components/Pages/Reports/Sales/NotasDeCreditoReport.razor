@page "/reports/sales/credit-notes"
@using Microsoft.AspNetCore.Authorization
@using System.Globalization
@using System.Security.Claims
@using FacturasSRI.Application.Dtos.Reports
@using FacturasSRI.Application.Interfaces
@using Microsoft.JSInterop
@inject IReportService ReportService
@inject IJSRuntime JSRuntime
@inject AuthenticationStateProvider AuthenticationStateProvider

@attribute [Authorize(Roles = "Administrador, Vendedor")]

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h4 class="m-0 font-weight-bold text-primary">Reporte de Notas de Crédito Emitidas</h4>
            <p class="text-muted mb-0">Muestra todas las notas de crédito emitidas en un rango de fechas.</p>
        </div>
        <div class="card-body">
            <div class="row align-items-end mb-3">
                <div class="col-md-4">
                    <label for="startDate" class="form-label">Fecha de Inicio</label>
                    <input type="date" id="startDate" class="form-control" @bind="startDate" />
                </div>
                <div class="col-md-4">
                    <label for="endDate" class="form-label">Fecha de Fin</label>
                    <input type="date" id="endDate" class="form-control" @bind="endDate" />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button class="btn btn-primary me-2" @onclick="GenerateReport" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm"></span>
                            <span>Generando...</span>
                        }
                        else
                        {
                            <i class="bi bi-search me-1"></i>
                            <span>Generar Reporte</span>
                        }
                    </button>
                    @if (reportData != null && reportData.Any())
                    {
                        <button class="btn btn-info" @onclick="DownloadPdf" disabled="@isDownloading">
                            @if (isDownloading)
                            {
                                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                <span class="ms-1">Descargando...</span>
                            }
                            else
                            {
                                <i class="bi bi-file-earmark-pdf me-1"></i>
                                <span>Descargar PDF</span>
                            }
                        </button>
                    }
                </div>
            </div>

            @if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Error:</strong> @errorMessage
                </div>
            }

            @if (reportData != null)
            {
                if (!reportData.Any())
                {
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        No se encontraron notas de crédito para el período seleccionado.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th># Nota de Crédito</th>
                                    <th>Fecha Emisión</th>
                                    <th>Cliente</th>
                                    <th>Factura Afectada</th>
                                    <th>Motivo</th>
                                    <th>Vendedor</th>
                                    <th class="text-end">Valor</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in reportData)
                                {
                                    <tr>
                                        <td>@item.NumeroNotaCredito</td>
                                        <td>@item.FechaEmision.ToString("dd/MM/yyyy")</td>
                                        <td>@item.NombreCliente</td>
                                        <td>@item.FacturaModificada</td>
                                        <td>@item.Motivo</td>
                                        <td>@item.Vendedor</td>
                                        <td class="text-end">@item.ValorTotal.ToString("C", esEcCulture)</td>
                                    </tr>
                                }
                            </tbody>
                             <tfoot>
                                <tr class="table-primary">
                                    <td colspan="6" class="text-end font-weight-bold"><strong>Total Devuelto:</strong></td>
                                    <td class="text-end font-weight-bold"><strong>@reportData.Sum(x => x.ValorTotal).ToString("C", esEcCulture)</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    private DateTime startDate = DateTime.Now.AddMonths(-1).Date;
    private DateTime endDate = DateTime.Now.Date;
    private IEnumerable<NotasDeCreditoReportDto>? reportData;
    private bool isLoading = false;
    private bool isDownloading = false;
    private string? errorMessage;
    private readonly CultureInfo esEcCulture = new CultureInfo("es-EC");

    private async Task GenerateReport()
    {
        isLoading = true;
        errorMessage = null;
        reportData = null;

        if (startDate > endDate)
        {
            errorMessage = "La fecha de inicio no puede ser posterior a la fecha de fin.";
            isLoading = false;
            return;
        }

        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            var userIdClaim = user.FindFirst(ClaimTypes.NameIdentifier);
            var userId = Guid.TryParse(userIdClaim?.Value, out var id) ? (Guid?)id : null;
            var finalUserId = user.IsInRole("Administrador") ? null : userId;

            reportData = await ReportService.GetNotasDeCreditoAsync(startDate, endDate, finalUserId);
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error al generar el reporte: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DownloadPdf()
    {
        isDownloading = true;
        errorMessage = null;

        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            var userIdClaim = user.FindFirst(ClaimTypes.NameIdentifier);
            var userId = Guid.TryParse(userIdClaim?.Value, out var id) ? (Guid?)id : null;
            var finalUserId = user.IsInRole("Administrador") ? null : userId;

            var pdfBytes = await ReportService.GetNotasDeCreditoAsPdfAsync(startDate, endDate, finalUserId);

            if (pdfBytes.Length == 0)
            {
                errorMessage = "No se encontraron datos para generar el PDF.";
                isDownloading = false;
                return;
            }

            var fileName = $"Reporte_Notas_De_Credito_{startDate:yyyyMMdd}-{endDate:yyyyMMdd}.pdf";
            var fileStream = new MemoryStream(pdfBytes);
            using var streamRef = new DotNetStreamReference(stream: fileStream);
            await JSRuntime.InvokeVoidAsync("downloadFileFromStream", fileName, streamRef);
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error al descargar el PDF: {ex.Message}";
        }
        finally
        {
            isDownloading = false;
        }
    }
}