@page "/reports/sales/customer-activity"
@using Microsoft.AspNetCore.Authorization
@using System.Globalization
@using System.Security.Claims
@using FacturasSRI.Application.Dtos
@using FacturasSRI.Application.Dtos.Reports
@using FacturasSRI.Application.Interfaces
@using Microsoft.JSInterop
@using FacturasSRI.Application.Interfaces
@inject IReportService ReportService
@inject IUserService UserService
@inject IJSRuntime JSRuntime
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ITimeZoneHelper TimeZoneHelper

@attribute [Authorize(Roles = "Administrador, Vendedor")]

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h4 class="m-0 font-weight-bold text-primary">Reporte de Actividad de Clientes</h4>
            <p class="text-muted mb-0">Muestra la actividad de todos los clientes. Los cálculos de 'Última Compra' y 'Total Comprado' se basan únicamente en las ventas realizadas dentro del período de fechas seleccionado.</p>
        </div>
        <div class="card-body">
            <div class="row align-items-end mb-3">
                
                @* 1. Fecha Inicio *@
                <div class="@ColumnClass">
                    <label for="startDate" class="form-label">Fecha de Inicio</label>
                    <input type="date" id="startDate" class="form-control" @bind="startDate" />
                </div>

                @* 2. Fecha Fin *@
                <div class="@ColumnClass">
                    <label for="endDate" class="form-label">Fecha de Fin</label>
                    <input type="date" id="endDate" class="form-control" @bind="endDate" />
                </div>

                @* 3. Filtro de Usuario (SOLO ADMIN) *@
                @if (isAdmin)
                {
                    <div class="@ColumnClass">
                        <label for="userFilter" class="form-label">Filtrar por Vendedor</label>
                        <select id="userFilter" class="form-select" @bind="selectedFilterUserId">
                            <option value="">-- Todos los Vendedores --</option>
                            @if (usersList != null)
                            {
                                foreach (var user in usersList)
                                {
                                    <option value="@user.Id">@user.PrimerNombre @user.PrimerApellido</option>
                                }
                            }
                        </select>
                    </div>
                }

                @* 4. Botones *@
                <div class="@ColumnClass d-flex align-items-end">
                    <button class="btn btn-primary me-2 w-100" @onclick="GenerateReport" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm"></span>
                        }
                        else
                        {
                            <i class="bi bi-search me-1"></i>
                            <span>Generar</span>
                        }
                    </button>
                    @if (reportData != null && reportData.Any())
                    {
                        <button class="btn btn-danger w-100" @onclick="DownloadPdf" disabled="@isDownloading">
                            @if (isDownloading)
                            {
                                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            }
                            else
                            {
                                <i class="bi bi-file-earmark-pdf me-2"></i><span>Descargar PDF</span>
                            }
                        </button>
                    }
                </div>
            </div>

            @if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Error:</strong> @errorMessage
                </div>
            }

            @if (reportData != null)
            {
                if (!reportData.Any())
                {
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        No se encontraron datos de actividad para el período seleccionado.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Cliente</th>
                                    <th>Identificación</th>
                                    <th>Última Compra</th>
                                    <th class="text-end">Días Inactivo</th>
                                    <th class="text-end"># Compras</th>
                                    <th class="text-end">Total Comprado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in reportData)
                                {
                                    <tr class="@(item.DiasDesdeUltimaCompra > 90 ? "table-warning" : "")">
                                        <td>@item.NombreCliente</td>
                                        <td>@item.Identificacion</td>
                                        <td>@(item.UltimaCompra.HasValue ? TimeZoneHelper.ConvertUtcToEcuadorTime(item.UltimaCompra.Value).ToString("dd/MM/yyyy") : "N/A")</td>
                                        <td class="text-end">@(item.DiasDesdeUltimaCompra == -1 ? "N/A" : item.DiasDesdeUltimaCompra.ToString())</td>
                                        <td class="text-end">@item.NumeroDeCompras</td>
                                        <td class="text-end">@item.TotalComprado.ToString("C", esEcCulture)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    // Variables de Filtro
    private DateTime startDate = DateTime.Now.AddMonths(-1).Date;
    private DateTime endDate = DateTime.Now.Date;

    // Variables de Usuario y Roles
    private bool isAdmin = false;
    private Guid? loggedUserId;
    private Guid? selectedFilterUserId;
    private List<UserDto>? usersList;

    // Variables de Datos
    private IEnumerable<ClienteActividadDto>? reportData;
    private bool isLoading = false;
    private bool isDownloading = false;
    private string? errorMessage;
    private readonly CultureInfo esEcCulture = new CultureInfo("es-EC");

    // Layout Dinámico
    private string ColumnClass => isAdmin ? "col-md-3" : "col-md-4";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity != null && user.Identity.IsAuthenticated)
            {
                isAdmin = user.IsInRole("Administrador");
                
                var userIdClaim = user.FindFirst(ClaimTypes.NameIdentifier);
                if (Guid.TryParse(userIdClaim?.Value, out var id))
                {
                    loggedUserId = id;
                }

                if (isAdmin)
                {
                    var allUsers = await UserService.GetActiveUsersAsync();
                    // Filtramos para quitar bodegueros, solo Ventas y Admin
                    usersList = allUsers
                        .Where(u => u.Roles.Contains("Vendedor") || u.Roles.Contains("Administrador"))
                        .OrderBy(u => u.PrimerNombre)
                        .ToList();
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar permisos: {ex.Message}";
        }
    }

    private Guid? GetQueryUserId()
    {
        return isAdmin ? selectedFilterUserId : loggedUserId;
    }

    private async Task GenerateReport()
    {
        isLoading = true;
        errorMessage = null;
        reportData = null;

        if (startDate > endDate)
        {
            errorMessage = "La fecha de inicio no puede ser posterior a la fecha de fin.";
            isLoading = false;
            return;
        }

        try
        {
            var queryUserId = GetQueryUserId();
            reportData = await ReportService.GetActividadClientesAsync(startDate, endDate, queryUserId);
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error al generar el reporte: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DownloadPdf()
    {
        isDownloading = true;
        errorMessage = null;

        try
        {
            var queryUserId = GetQueryUserId();
            var pdfBytes = await ReportService.GetActividadClientesAsPdfAsync(startDate, endDate, queryUserId);

            if (pdfBytes.Length == 0)
            {
                errorMessage = "No se encontraron datos para generar el PDF.";
                isDownloading = false;
                return;
            }

            var fileName = $"Reporte_Actividad_Clientes_{startDate:yyyyMMdd}-{endDate:yyyyMMdd}.pdf";
            var fileStream = new MemoryStream(pdfBytes);
            using var streamRef = new DotNetStreamReference(stream: fileStream);
            await JSRuntime.InvokeVoidAsync("downloadFileFromStream", fileName, streamRef);
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error al descargar el PDF: {ex.Message}";
        }
        finally
        {
            isDownloading = false;
        }
    }
}