@page "/reports/warehouse/low-stock-products"
@using Microsoft.AspNetCore.Authorization
@using System.Globalization
@using FacturasSRI.Application.Dtos.Reports
@inject HttpClient Http

@attribute [Authorize(Roles = "Administrador, Bodeguero")]

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <div>
                <h4 class="m-0 font-weight-bold text-primary">Reporte de Productos Bajo Stock Mínimo</h4>
                <p class="text-muted mb-0">Muestra los productos cuyo stock actual es inferior al stock mínimo definido.</p>
            </div>
            <button class="btn btn-primary" @onclick="GenerateReport" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    <span class="ms-1">Actualizando...</span>
                }
                else
                {
                    <i class="bi bi-arrow-clockwise me-1"></i>
                    <span>Actualizar</span>
                }
            </button>
        </div>
        <div class="card-body">
            @if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Error:</strong> @errorMessage
                </div>
            }

            @if (reportData != null)
            {
                if (!reportData.Any())
                {
                    <div class="alert alert-success" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        ¡Todos los productos están por encima del stock mínimo!
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Código</th>
                                    <th>Producto</th>
                                    <th class="text-end">Stock Actual</th>
                                    <th class="text-end">Stock Mínimo</th>
                                    <th class="text-end">Cantidad Faltante</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in reportData)
                                {
                                    <tr class="table-danger">
                                        <td>@item.CodigoPrincipal</td>
                                        <td>@item.NombreProducto</td>
                                        <td class="text-end">@item.StockActual</td>
                                        <td class="text-end">@item.StockMinimo</td>
                                        <td class="text-end font-weight-bold">@item.CantidadFaltante</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    private IEnumerable<ProductoStockMinimoDto>? reportData;
    private bool isLoading = false;
    private string? errorMessage;
    
    protected override async Task OnInitializedAsync()
    {
        await GenerateReport();
    }

    private async Task GenerateReport()
    {
        isLoading = true;
        errorMessage = null;
        
        try
        {
            var response = await Http.GetAsync($"/api/reports/warehouse/low-stock-products");

            if (response.IsSuccessStatusCode)
            {
                reportData = await response.Content.ReadFromJsonAsync<IEnumerable<ProductoStockMinimoDto>>();
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                errorMessage = $"No se pudo generar el reporte. El servidor respondió con el código de estado {response.StatusCode}. Detalles: {errorContent}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error de red o de cliente al intentar generar el reporte: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}
