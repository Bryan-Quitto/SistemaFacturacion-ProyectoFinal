@page "/reports/warehouse/low-stock-products"
@using Microsoft.AspNetCore.Authorization
@using System.Globalization
@using FacturasSRI.Application.Dtos.Reports
@using System.Security.Claims
@using FacturasSRI.Application.Interfaces
@inject IReportService ReportService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IJSRuntime JSRuntime

@attribute [Authorize(Roles = "Administrador, Bodeguero")]

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <div>
                <h4 class="m-0 font-weight-bold text-primary">Reporte de Productos Bajo Stock Mínimo</h4>
                <p class="text-muted mb-0">Muestra los productos cuyo stock actual es inferior al stock mínimo definido.</p>
            </div>
            <div>
                <button class="btn btn-primary me-2" @onclick="GenerateReport" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        <span class="ms-1">Actualizando...</span>
                    }
                    else
                    {
                        <i class="bi bi-arrow-clockwise me-1"></i>
                        <span>Actualizar</span>
                    }
                </button>
                @if (reportData != null && reportData.Any())
                {
                    <button class="btn btn-info" @onclick="DownloadPdf" disabled="@isDownloading">
                        @if (isDownloading)
                        {
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            <span class="ms-1">Descargando...</span>
                        }
                        else
                        {
                            <i class="bi bi-file-earmark-pdf me-1"></i>
                            <span>Descargar PDF</span>
                        }
                    </button>
                }
            </div>
        </div>
        <div class="card-body">
            @if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Error:</strong> @errorMessage
                </div>
            }

            @if (reportData != null)
            {
                if (!reportData.Any())
                {
                    <div class="alert alert-success" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        ¡Todos los productos están por encima del stock mínimo!
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead class="table-dark">
                            <tr>
                                <th>Código</th>
                                <th>Producto</th>
                                <th class="text-end">Actual</th>
                                <th class="text-end">Mínimo</th>
                                <th class="text-end">Faltante</th>
                                <th class="text-end">Costo Unit.</th> 
                                <th class="text-end">Total Reposición</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in reportData)
                            {
                                <tr>
                                    <td>@item.CodigoPrincipal</td>
                                    <td>@item.NombreProducto</td>
                                    <td class="text-end">@item.StockActual</td>
                                    <td class="text-end">@item.StockMinimo</td>
                                    <td class="text-end font-weight-bold text-danger">@item.CantidadFaltante</td>
                                    <td class="text-end">@item.CostoPromedioUnitario.ToString("C", esEcCulture)</td>
                                    <td class="text-end font-weight-bold">@item.CostoEstimadoReposicion.ToString("C", esEcCulture)</td>
                                </tr>
                            }
                        </tbody>
                        </table>
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    private IEnumerable<ProductoStockMinimoDto>? reportData;
    private bool isLoading = false;
    private bool isDownloading = false;
    private string? errorMessage;
    private readonly CultureInfo esEcCulture = new CultureInfo("es-EC"); // Agregada esta línea
    
    protected override async Task OnInitializedAsync()
    {
        await GenerateReport();
    }

    private async Task GenerateReport()
    {
        isLoading = true;
        errorMessage = null;
        reportData = null; // Clear previous data
        
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            var userIdClaim = user.FindFirst(ClaimTypes.NameIdentifier);
            var userId = Guid.TryParse(userIdClaim?.Value, out var id) ? (Guid?)id : null;
            var finalUserId = user.IsInRole("Administrador") ? null : userId;

            reportData = await ReportService.GetProductosBajoStockMinimoAsync(finalUserId);
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error al generar el reporte: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DownloadPdf()
    {
        isDownloading = true;
        errorMessage = null;

        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            var userIdClaim = user.FindFirst(ClaimTypes.NameIdentifier);
            var userId = Guid.TryParse(userIdClaim?.Value, out var id) ? (Guid?)id : null;
            var finalUserId = user.IsInRole("Administrador") ? null : userId;

            var pdfBytes = await ReportService.GetProductosBajoStockMinimoAsPdfAsync(finalUserId);

            if (pdfBytes.Length == 0)
            {
                errorMessage = "No se encontraron datos para generar el PDF.";
                isDownloading = false;
                return;
            }

            var fileName = $"Reporte_Productos_Bajo_Stock_Minimo_{DateTime.Now:yyyyMMdd}.pdf";
            var fileStream = new MemoryStream(pdfBytes);
            using var streamRef = new DotNetStreamReference(stream: fileStream);
            await JSRuntime.InvokeVoidAsync("downloadFileFromStream", fileName, streamRef);
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error al descargar el PDF: {ex.Message}";
        }
        finally
        {
            isDownloading = false;
        }
    }
}