@page "/reports/warehouse/current-stock"
@using Microsoft.AspNetCore.Authorization
@using System.Globalization
@using FacturasSRI.Application.Dtos.Reports
@using System.Security.Claims
@using FacturasSRI.Application.Interfaces
@inject IReportService ReportService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IJSRuntime JSRuntime

@attribute [Authorize(Roles = "Administrador, Bodeguero")]

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <div>
                <h4 class="m-0 font-weight-bold text-primary">Reporte de Stock Actual</h4>
                <p class="text-muted mb-0">Muestra el inventario valorizado de todos los productos activos.</p>
            </div>
            <div class="d-flex align-items-center">
                 <div class="form-check me-3">
                    <input class="form-check-input" type="checkbox" id="hideZeros" @bind="hideZeroStock">
                    <label class="form-check-label" for="hideZeros">
                        Ocultar Stock 0
                    </label>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-primary flex-grow-1 text-nowrap" @onclick="GenerateReport" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            <span class="ms-1">Actualizando...</span>
                        }
                        else
                        {
                            <i class="bi bi-arrow-clockwise me-1"></i>
                            <span>Actualizar</span>
                        }
                    </button>
                    @if (reportData != null && reportData.Any())
                    {
                        <button class="btn btn-danger flex-grow-1 text-nowrap" @onclick="DownloadPdf" disabled="@isDownloading">
                            @if (isDownloading)
                            {
                                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                <span class="ms-1">Descargando...</span>
                            }
                            else
                            {
                                <i class="bi bi-file-earmark-pdf me-2"></i><span>Desc. PDF</span>
                            }
                        </button>
                    }
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Error:</strong> @errorMessage
                </div>
            }

            @if (reportData != null)
            {
                if (!reportData.Any())
                {
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        No se encontraron productos en el inventario.
                    </div>
                }
                else
                {
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                                <input type="text" class="form-control" placeholder="Buscar en resultados..." 
                                    @bind="searchText" @bind:event="oninput" />
                                @if (!string.IsNullOrEmpty(searchText))
                                {
                                    <button class="btn btn-outline-secondary" @onclick="() => searchText = string.Empty">
                                        <i class="bi bi-x"></i>
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Código</th>
                                    <th>Producto</th>
                                    <th>Categoría</th>
                                    <th class="text-end">Stock Actual</th>
                                    <th class="text-end">Costo Promedio</th>
                                    <th class="text-end">Valor Inventario</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!FilteredData.Any() && reportData.Any())
                                {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">No hay coincidencias con la búsqueda.</td>
                                    </tr>
                                }
                                @foreach (var item in FilteredData)
                                {
                                    <tr>
                                        <td>@item.CodigoPrincipal</td>
                                        <td>@item.NombreProducto</td>
                                        <td>@item.Categoria</td>
                                        <td class="text-end">@item.StockTotal</td>
                                        <td class="text-end">@item.PrecioCompraPromedioPonderado.ToString("C", esEcCulture)</td>
                                        <td class="text-end font-weight-bold">@item.ValorInventario.ToString("C", esEcCulture)</td>
                                    </tr>
                                }
                            </tbody>
                             <tfoot>
                                <tr class="table-primary">
                                    <td colspan="5" class="text-end font-weight-bold"><strong>Valor Total del Inventario:</strong></td>
                                    <td class="text-end font-weight-bold"><strong>@(reportData?.Sum(x => x.ValorInventario).ToString("C", esEcCulture) ?? 0.ToString("C", esEcCulture))</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    private bool hideZeroStock = true;
    private string searchText = "";

    // Cambio: Quitamos el '?' porque el get asegura que no devuelve null
    private IEnumerable<StockActualDto> FilteredData
    {
        get
        {
            if (reportData == null)
            {
                return new List<StockActualDto>();
            }

            if (string.IsNullOrWhiteSpace(searchText))
            {
                return reportData;
            }

            var lowerSearchText = searchText.ToLowerInvariant();

            return reportData.Where(item =>
                (item.CodigoPrincipal?.ToLowerInvariant().Contains(lowerSearchText) ?? false) ||
                (item.NombreProducto?.ToLowerInvariant().Contains(lowerSearchText) ?? false) ||
                (item.Categoria?.ToLowerInvariant().Contains(lowerSearchText) ?? false)
            );
        }
    }

    private IEnumerable<StockActualDto>? reportData;
    private bool isLoading = false;
    private bool isDownloading = false;
    private string? errorMessage;
    private readonly CultureInfo esEcCulture = new CultureInfo("es-EC");

    protected override async Task OnInitializedAsync()
    {
        await GenerateReport();
    }

    private async Task GenerateReport()
    {
        isLoading = true;
        errorMessage = null;
        reportData = null;
        
        try
        {
            // Para Stock Actual, enviamos null (Global) tanto para Bodeguero como para Admin.
            Guid? globalUserId = null;

            reportData = await ReportService.GetStockActualAsync(globalUserId, hideZeroStock);
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error al generar el reporte: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DownloadPdf()
    {
        isDownloading = true;
        errorMessage = null;
        
        try
        {
            Guid? globalUserId = null;
            var pdfBytes = await ReportService.GetStockActualAsPdfAsync(globalUserId, hideZeroStock);

            if (pdfBytes.Length == 0)
            {
                errorMessage = "No se encontraron datos para generar el PDF.";
                isDownloading = false;
                return;
            }

            var fileName = $"Reporte_Stock_Actual_{DateTime.Now:yyyyMMdd}.pdf";
            var fileStream = new MemoryStream(pdfBytes);
            using var streamRef = new DotNetStreamReference(stream: fileStream);
            await JSRuntime.InvokeVoidAsync("downloadFileFromStream", fileName, streamRef);
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error al descargar el PDF: {ex.Message}";
        }
        finally
        {
            isDownloading = false;
        }
    }
}