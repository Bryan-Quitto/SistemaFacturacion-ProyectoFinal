@page "/reports/warehouse/current-stock"
@using Microsoft.AspNetCore.Authorization
@using System.Globalization
@using FacturasSRI.Application.Dtos.Reports
@inject HttpClient Http

@attribute [Authorize(Roles = "Administrador, Bodeguero")]

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <div>
                <h4 class="m-0 font-weight-bold text-primary">Reporte de Stock Actual</h4>
                <p class="text-muted mb-0">Muestra el inventario valorizado de todos los productos activos.</p>
            </div>
            <button class="btn btn-primary" @onclick="GenerateReport" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    <span class="ms-1">Actualizando...</span>
                }
                else
                {
                    <i class="bi bi-arrow-clockwise me-1"></i>
                    <span>Actualizar</span>
                }
            </button>
        </div>
        <div class="card-body">
            @if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Error:</strong> @errorMessage
                </div>
            }

            @if (reportData != null)
            {
                if (!reportData.Any())
                {
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        No se encontraron productos en el inventario.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Código</th>
                                    <th>Producto</th>
                                    <th>Categoría</th>
                                    <th class="text-end">Stock Actual</th>
                                    <th class="text-end">Costo Promedio</th>
                                    <th class="text-end">Valor Inventario</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in reportData)
                                {
                                    <tr>
                                        <td>@item.CodigoPrincipal</td>
                                        <td>@item.NombreProducto</td>
                                        <td>@item.Categoria</td>
                                        <td class="text-end">@item.StockTotal</td>
                                        <td class="text-end">@item.PrecioCompraPromedioPonderado.ToString("C", esEcCulture)</td>
                                        <td class="text-end font-weight-bold">@item.ValorInventario.ToString("C", esEcCulture)</td>
                                    </tr>
                                }
                            </tbody>
                             <tfoot>
                                <tr class="table-primary">
                                    <td colspan="5" class="text-end font-weight-bold"><strong>Valor Total del Inventario:</strong></td>
                                    <td class="text-end font-weight-bold"><strong>@reportData.Sum(x => x.ValorInventario).ToString("C", esEcCulture)</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    private IEnumerable<StockActualDto>? reportData;
    private bool isLoading = false;
    private string? errorMessage;
    private readonly CultureInfo esEcCulture = new CultureInfo("es-EC");

    protected override async Task OnInitializedAsync()
    {
        await GenerateReport();
    }

    private async Task GenerateReport()
    {
        isLoading = true;
        errorMessage = null;
        
        try
        {
            var response = await Http.GetAsync($"/api/reports/warehouse/current-stock");

            if (response.IsSuccessStatusCode)
            {
                reportData = await response.Content.ReadFromJsonAsync<IEnumerable<StockActualDto>>();
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                errorMessage = $"No se pudo generar el reporte. El servidor respondió con el código de estado {response.StatusCode}. Detalles: {errorContent}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error de red o de cliente al intentar generar el reporte: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}
