@page "/reports/warehouse/purchases-by-period"
@using Microsoft.AspNetCore.Authorization
@using System.Globalization
@using FacturasSRI.Application.Dtos.Reports
@using System.Security.Claims
@using FacturasSRI.Application.Interfaces
@inject IReportService ReportService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IJSRuntime JSRuntime

@attribute [Authorize(Roles = "Administrador, Bodeguero")]

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h4 class="m-0 font-weight-bold text-primary">Reporte de Compras por Período</h4>
            <p class="text-muted mb-0">Muestra un listado detallado de todas las compras realizadas en el período.</p>
        </div>
        <div class="card-body">
            <div class="row align-items-end mb-3">
                <div class="col-md-4">
                    <label for="startDate" class="form-label">Fecha de Inicio</label>
                    <input type="date" id="startDate" class="form-control" @bind="startDate" />
                </div>
                <div class="col-md-4">
                    <label for="endDate" class="form-label">Fecha de Fin</label>
                    <input type="date" id="endDate" class="form-control" @bind="endDate" />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button class="btn btn-primary me-2" @onclick="GenerateReport" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            <span class="ms-1">Generando...</span>
                        }
                        else
                        {
                            <i class="bi bi-search me-1"></i>
                            <span>Generar Reporte</span>
                        }
                    </button>
                    @if (reportData != null && reportData.Any())
                    {
                                            <button class="btn btn-info" @onclick="DownloadPdf" disabled="@isDownloading">
                                                @if (isDownloading)
                                                {
                                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                                    <span class="ms-1">Descargando...</span>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-file-earmark-pdf me-1"></i>
                                                    <span>Descargar PDF</span>
                                                }
                                            </button>                   
                                             }
                </div>
            </div>

            @if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Error:</strong> @errorMessage
                </div>
            }

            @if (reportData != null)
            {
                if (!reportData.Any())
                {
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        No se encontraron compras para el período seleccionado.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover table-sm">
                        <thead class="table-dark">
                            <tr>
                                <th>Fecha</th>
                                <th>Resp.</th>
                                <th>Proveedor</th>
                                <th>Documento</th>
                                <th>Producto</th>
                                <th class="text-end">Cant.</th>
                                <th class="text-end">Costo Unit.</th>
                                <th class="text-end">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in reportData)
                            {
                                <tr>
                                    <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                                    <td>@item.UsuarioResponsable</td>
                                    <td>@item.NombreProveedor</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.NumeroFacturaProveedor))
                                        {
                                            <div><small class="text-muted">Prov:</small> @item.NumeroFacturaProveedor</div>
                                        }
                                        <div><small class="text-muted">Int:</small> #@item.NumeroCompraInterno</div>
                                    </td>
                                    <td>@item.ProductoNombre</td>
                                    <td class="text-end">@item.CantidadComprada.ToString("N0")</td>
                                    <td class="text-end">@item.CostoUnitario.ToString("C", esEcCulture)</td>
                                    <td class="text-end">@item.CostoTotal.ToString("C", esEcCulture)</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-primary">
                                <td colspan="4" class="text-end font-weight-bold"><strong>Totales:</strong></td>
                                <td class="text-end font-weight-bold"><strong>@reportData.Sum(x => x.CantidadComprada).ToString("N0")</strong></td>
                                <td></td>
                                <td class="text-end font-weight-bold"><strong>@reportData.Sum(x => x.CostoTotal).ToString("C", esEcCulture)</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                }
            }
        </div>
    </div>
</div>

@code {
    private DateTime startDate = DateTime.Now.AddMonths(-1).Date;
    private DateTime endDate = DateTime.Now.Date;
    private IEnumerable<ComprasPorPeriodoDto>? reportData;
    private bool isLoading = false;
    private bool isDownloading = false;
    private string? errorMessage;
    private readonly CultureInfo esEcCulture = new CultureInfo("es-EC");

    private async Task GenerateReport()
    {
        isLoading = true;
        errorMessage = null;
        reportData = null;

        if (startDate > endDate)
        {
            errorMessage = "La fecha de inicio no puede ser posterior a la fecha de fin.";
            isLoading = false;
            return;
        }

        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            var userIdClaim = user.FindFirst(ClaimTypes.NameIdentifier);
            var userId = Guid.TryParse(userIdClaim?.Value, out var id) ? (Guid?)id : null;
            var finalUserId = user.IsInRole("Administrador") ? null : userId;

            reportData = await ReportService.GetComprasPorPeriodoAsync(startDate, endDate, finalUserId);
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error al generar el reporte: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DownloadPdf()
    {
        isDownloading = true;
        errorMessage = null;

        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            var userIdClaim = user.FindFirst(ClaimTypes.NameIdentifier);
            var userId = Guid.TryParse(userIdClaim?.Value, out var id) ? (Guid?)id : null;
            var finalUserId = user.IsInRole("Administrador") ? null : userId;

            var pdfBytes = await ReportService.GetComprasPorPeriodoAsPdfAsync(startDate, endDate, finalUserId);

            if (pdfBytes.Length == 0)
            {
                errorMessage = "No se encontraron datos para generar el PDF.";
                isDownloading = false;
                return;
            }

            var fileName = $"Reporte_Compras_Por_Periodo_{startDate:yyyyMMdd}-{endDate:yyyyMMdd}.pdf";
            var fileStream = new MemoryStream(pdfBytes);
            using var streamRef = new DotNetStreamReference(stream: fileStream);
            await JSRuntime.InvokeVoidAsync("downloadFileFromStream", fileName, streamRef);
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error al descargar el PDF: {ex.Message}";
        }
        finally
        {
            isDownloading = false;
        }
    }
}