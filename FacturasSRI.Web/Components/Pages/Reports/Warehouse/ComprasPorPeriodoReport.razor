@page "/reports/warehouse/purchases-by-period"
@using Microsoft.AspNetCore.Authorization
@using System.Globalization
@using FacturasSRI.Application.Dtos.Reports
@inject HttpClient Http

@attribute [Authorize(Roles = "Administrador, Bodeguero")]

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h4 class="m-0 font-weight-bold text-primary">Reporte de Compras por Período</h4>
            <p class="text-muted mb-0">Muestra un resumen de las compras de productos, agrupadas por producto.</p>
        </div>
        <div class="card-body">
            <div class="row align-items-end mb-3">
                <div class="col-md-4">
                    <label for="startDate" class="form-label">Fecha de Inicio</label>
                    <input type="date" id="startDate" class="form-control" @bind="startDate" />
                </div>
                <div class="col-md-4">
                    <label for="endDate" class="form-label">Fecha de Fin</label>
                    <input type="date" id="endDate" class="form-control" @bind="endDate" />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button class="btn btn-primary" @onclick="GenerateReport" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            <span class="ms-1">Generando...</span>
                        }
                        else
                        {
                            <i class="bi bi-search me-1"></i>
                            <span>Generar Reporte</span>
                        }
                    </button>
                </div>
            </div>

            @if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Error:</strong> @errorMessage
                </div>
            }

            @if (reportData != null)
            {
                if (!reportData.Any())
                {
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        No se encontraron compras para el período seleccionado.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Producto</th>
                                    <th class="text-end">Cantidad Comprada</th>
                                    <th class="text-end">Costo Promedio Unitario</th>
                                    <th class="text-end">Costo Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in reportData)
                                {
                                    <tr>
                                        <td>@item.ProductoNombre</td>
                                        <td class="text-end">@item.CantidadComprada</td>
                                        <td class="text-end">@item.CostoPromedio.ToString("C", esEcCulture)</td>
                                        <td class="text-end">@item.CostoTotal.ToString("C", esEcCulture)</td>
                                    </tr>
                                }
                            </tbody>
                             <tfoot>
                                <tr class="table-primary">
                                    <td class="text-end font-weight-bold"><strong>Totales:</strong></td>
                                    <td class="text-end font-weight-bold"><strong>@reportData.Sum(x => x.CantidadComprada)</strong></td>
                                    <td></td>
                                    <td class="text-end font-weight-bold"><strong>@reportData.Sum(x => x.CostoTotal).ToString("C", esEcCulture)</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    private DateTime startDate = DateTime.Now.AddMonths(-1).Date;
    private DateTime endDate = DateTime.Now.Date;
    private IEnumerable<ComprasPorPeriodoDto>? reportData;
    private bool isLoading = false;
    private string? errorMessage;
    private readonly CultureInfo esEcCulture = new CultureInfo("es-EC");

    private async Task GenerateReport()
    {
        isLoading = true;
        errorMessage = null;
        reportData = null;

        if (startDate > endDate)
        {
            errorMessage = "La fecha de inicio no puede ser posterior a la fecha de fin.";
            isLoading = false;
            return;
        }

        try
        {
            var response = await Http.GetAsync($"/api/reports/warehouse/purchases-by-period?startDate={startDate:yyyy-MM-dd}&endDate={endDate:yyyy-MM-dd}");

            if (response.IsSuccessStatusCode)
            {
                reportData = await response.Content.ReadFromJsonAsync<IEnumerable<ComprasPorPeriodoDto>>();
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                errorMessage = $"No se pudo generar el reporte. El servidor respondió con el código de estado {response.StatusCode}. Detalles: {errorContent}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error de red o de cliente al intentar generar el reporte: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}
