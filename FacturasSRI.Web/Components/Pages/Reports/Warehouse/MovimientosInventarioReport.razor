@page "/reports/warehouse/inventory-movements"
@using Microsoft.AspNetCore.Authorization
@using System.Globalization
@using FacturasSRI.Application.Dtos
@using FacturasSRI.Application.Dtos.Reports
@using System.Security.Claims
@using FacturasSRI.Application.Interfaces
@using Microsoft.Extensions.Logging
@inject IReportService ReportService
@inject IUserService UserService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IJSRuntime JSRuntime
@inject ITimeZoneHelper TimeZoneHelper
@inject ILogger<MovimientosInventarioReport> Logger

@attribute [Authorize(Roles = "Administrador, Bodeguero")]

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h4 class="m-0 font-weight-bold text-primary">Reporte de Movimientos de Inventario</h4>
            <p class="text-muted mb-0">Muestra todas las entradas y salidas de inventario en un período de tiempo.</p>
        </div>
        <div class="card-body">
            <div class="row align-items-end mb-3">
                
                @* 1. Fecha Inicio *@
                <div class="@ColumnClass">
                    <label for="startDate" class="form-label">Fecha de Inicio</label>
                    <input type="date" id="startDate" class="form-control" @bind="startDate" />
                </div>

                @* 2. Fecha Fin *@
                <div class="@ColumnClass">
                    <label for="endDate" class="form-label">Fecha de Fin</label>
                    <input type="date" id="endDate" class="form-control" @bind="endDate" />
                </div>

                @* 3. Filtro de Usuario (SOLO ADMIN) *@
                @if (isAdmin)
                {
                    <div class="@ColumnClass">
                        <label for="userFilter" class="form-label">Filtrar por Responsable</label>
                        <select id="userFilter" class="form-select" @bind="selectedFilterUserId">
                            <option value="">-- Todos los Usuarios --</option>
                            @if (usersList != null)
                            {
                                foreach (var user in usersList)
                                {
                                    <option value="@user.Id">@user.PrimerNombre @user.PrimerApellido (@string.Join(", ", user.Roles))</option>
                                }
                            }
                        </select>
                    </div>
                }

                @* 4. Botones *@
                <div class="@ColumnClass d-flex align-items-end gap-2">
                    <button class="btn btn-primary flex-grow-1 text-nowrap" @onclick="GenerateReport" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm"></span>
                        }
                        else
                        {
                            <i class="bi bi-search me-1"></i>
                            <span>Generar</span>
                        }
                    </button>
                    @if (reportData != null && reportData.Any())
                    {
                        <button class="btn btn-danger flex-grow-1 text-nowrap" @onclick="DownloadPdf" disabled="@isDownloading">
                            @if (isDownloading)
                            {
                                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            }
                            else
                            {
                                <i class="bi bi-file-earmark-pdf me-2"></i><span>Desc. PDF</span>
                            }
                        </button>
                    }
                </div>
            </div>

            @if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Error:</strong> @errorMessage
                </div>
            }

            @if (reportData != null)
            {
                if (!reportData.Any())
                {
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        No se encontraron movimientos para el período seleccionado.
                    </div>
                }
                else
                {
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                                <input type="text" class="form-control" placeholder="Buscar en resultados..." 
                                    @bind="searchText" @bind:event="oninput" />
                                @if (!string.IsNullOrEmpty(searchText))
                                {
                                    <button class="btn btn-outline-secondary" @onclick="() => searchText = string.Empty">
                                        <i class="bi bi-x"></i>
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead class="table-dark">
                            <tr>
                                <th>Fecha</th>
                                <th>Resp.</th>
                                <th>Producto</th>
                                <th>Tipo</th>
                                <th>Documento</th>
                                <th class="text-end text-success">Entrada</th>
                                <th class="text-end text-danger">Salida</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!FilteredData.Any() && reportData.Any())
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted">No hay coincidencias con la búsqueda.</td>
                                </tr>
                            }
                            @foreach (var item in FilteredData)
                            {
                                <tr>
                                    <td>@TimeZoneHelper.ConvertUtcToEcuadorTime(DateTime.SpecifyKind(item.Fecha, DateTimeKind.Utc)).ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@item.UsuarioResponsable</td>
                                    <td>@item.ProductoNombre</td>
                                    <td>@item.TipoMovimiento</td>
                                    <td>@item.DocumentoReferencia</td>
                                    <td class="text-end text-success fw-bold">
                                        @(item.Entrada > 0 ? item.Entrada.ToString() : "-")
                                    </td>
                                    <td class="text-end text-danger fw-bold">
                                        @(item.Salida > 0 ? item.Salida.ToString() : "-")
                                    </td>
                                </tr>
                            }
                        </tbody>
                        </table>
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    private string searchText = "";

    private IEnumerable<MovimientoInventarioDto> FilteredData
    {
        get
        {
            if (reportData == null)
            {
                return new List<MovimientoInventarioDto>();
            }

            if (string.IsNullOrWhiteSpace(searchText))
            {
                return reportData;
            }

            var lowerSearchText = searchText.ToLowerInvariant();

            return reportData.Where(item =>
                (item.UsuarioResponsable?.ToLowerInvariant().Contains(lowerSearchText) ?? false) ||
                (item.ProductoNombre?.ToLowerInvariant().Contains(lowerSearchText) ?? false) ||
                (item.TipoMovimiento?.ToLowerInvariant().Contains(lowerSearchText) ?? false) ||
                (item.DocumentoReferencia?.ToLowerInvariant().Contains(lowerSearchText) ?? false) ||
                (TimeZoneHelper.ConvertUtcToEcuadorTime(DateTime.SpecifyKind(item.Fecha, DateTimeKind.Utc)).ToString("dd/MM/yyyy HH:mm").ToLowerInvariant().Contains(lowerSearchText))
            );
        }
    }

    // Filtros
    private DateTime startDate = DateTime.Today.AddDays(-7);
    private DateTime endDate = DateTime.Today;

    // Usuario y Roles
    private bool isAdmin = false;
    private Guid? selectedFilterUserId;
    private List<UserDto>? usersList;

    // Data y Estado
    private IEnumerable<MovimientoInventarioDto>? reportData;
    private bool isLoading = false;
    private bool isDownloading = false;
    private string? errorMessage;
    
    // Layout
    private string ColumnClass => isAdmin ? "col-md-3" : "col-md-4";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity != null && user.Identity.IsAuthenticated)
            {
                isAdmin = user.IsInRole("Administrador");

                if (isAdmin)
                {
                    var allUsers = await UserService.GetActiveUsersAsync();
                    // Incluimos Vendedores aqui tambien, pues ellos generan Movimientos tipo Venta
                    usersList = allUsers
                        .Where(u => u.Roles.Contains("Bodeguero") || u.Roles.Contains("Administrador") || u.Roles.Contains("Vendedor"))
                        .OrderBy(u => u.PrimerNombre)
                        .ToList();
                }
            }
            Logger.LogInformation("MovimientosInventarioReport: IsAdmin = {IsAdmin}", isAdmin);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar permisos: {ex.Message}";
            Logger.LogError(ex, "MovimientosInventarioReport: Error en OnInitializedAsync");
        }
    }

    private Guid? GetQueryUserId()
    {
        // Si es Admin, retornamos lo que seleccionó (o null para todos).
        // Si NO es Admin (es Bodeguero), retornamos NULL para que vea TODOS los registros.
        var queryUserId = isAdmin ? selectedFilterUserId : null;
        Logger.LogInformation("MovimientosInventarioReport: GetQueryUserId determined QueryUserId = {QueryUserId}", queryUserId);
        return queryUserId;
    }
    
    private async Task GenerateReport()
    {
        isLoading = true;
        errorMessage = null;
        reportData = null;

        if (startDate > endDate)
        {
            errorMessage = "La fecha de inicio no puede ser posterior a la fecha de fin.";
            isLoading = false;
            return;
        }

        try
        {
            var queryUserId = GetQueryUserId();
            Logger.LogInformation("MovimientosInventarioReport: Generating report with QueryUserId = {QueryUserId}", queryUserId);

            var safeStartDate = DateTime.SpecifyKind(startDate, DateTimeKind.Unspecified);
            var safeEndDate = DateTime.SpecifyKind(endDate, DateTimeKind.Unspecified);

            // Convert local selected dates to UTC (Ecuador's beginning/end of day)
            var utcStartDate = TimeZoneHelper.ConvertEcuadorToUtc(safeStartDate.Date);
            var utcEndDate = TimeZoneHelper.ConvertEcuadorToUtc(safeEndDate.Date.AddDays(1).AddTicks(-1)); // End of the selected day in Ecuador time

            reportData = await ReportService.GetMovimientosInventarioAsync(utcStartDate, utcEndDate, queryUserId);
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error al generar el reporte: {ex.Message}";
            Logger.LogError(ex, "MovimientosInventarioReport: Error in GenerateReport");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DownloadPdf()
    {
        isDownloading = true;
        errorMessage = null;

        try
        {
            var queryUserId = GetQueryUserId();

            var safeStartDate = DateTime.SpecifyKind(startDate, DateTimeKind.Unspecified);
            var safeEndDate = DateTime.SpecifyKind(endDate, DateTimeKind.Unspecified);

            // Convert local selected dates to UTC (Ecuador's beginning/end of day)
            var utcStartDate = TimeZoneHelper.ConvertEcuadorToUtc(safeStartDate.Date);
            var utcEndDate = TimeZoneHelper.ConvertEcuadorToUtc(safeEndDate.Date.AddDays(1).AddTicks(-1)); // End of the selected day in Ecuador time

            var pdfBytes = await ReportService.GetMovimientosInventarioAsPdfAsync(utcStartDate, utcEndDate, queryUserId);

            if (pdfBytes.Length == 0)
            {
                errorMessage = "No se encontraron datos para generar el PDF.";
                isDownloading = false;
                return;
            }

            var fileName = $"Reporte_Movimientos_Inventario_{startDate:yyyyMMdd}-{endDate:yyyyMMdd}.pdf";
            var fileStream = new MemoryStream(pdfBytes);
            using var streamRef = new DotNetStreamReference(stream: fileStream);
            await JSRuntime.InvokeVoidAsync("downloadFileFromStream", fileName, streamRef);
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error al descargar el PDF: {ex.Message}";
        }
        finally
        {
            isDownloading = false;
        }
    }
}