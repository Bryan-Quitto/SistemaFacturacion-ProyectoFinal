@page "/invoices"
@attribute [Authorize]
@using FacturasSRI.Application.Dtos
@using FacturasSRI.Application.Interfaces
@using FacturasSRI.Domain.Enums
@using FacturasSRI.Web.Components.Shared
@using System.Security.Claims
@inject IInvoiceService InvoiceService
@inject ICustomerService CustomerService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Facturas</PageTitle>

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1>Facturas Emitidas</h1>
        <p>Consulta el historial de facturas generadas.</p>
    </div>
    <button class="btn btn-primary" @onclick="GoToCreateInvoice">
        <i class="bi bi-plus-circle-fill me-2"></i>Crear Nueva Factura
    </button>
</div>

<div class="mb-3">
    <input type="text" class="form-control" placeholder="Buscar facturas por número o cliente..." @bind-value="searchTerm" @bind-value:event="oninput" />
</div>

@if (errorMessage != null)
{
    <div class="alert alert-danger">@errorMessage</div>
}

<div class="card">
    <div class="card-body">
        @if (allInvoices == null) // Check allInvoices for loading state
        {
            <p><em>Cargando facturas...</em></p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Número de Factura</th>
                            <th>Cliente</th>
                            <th>Forma de Pago</th>
                            <th>Estado</th>
                            <th class="text-end">Saldo Pendiente</th>
                            <th class="text-end">Total</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var invoice in FilteredInvoices) // Use FilteredInvoices
                        {
                            <tr>
                                <td><strong>@invoice.NumeroFactura</strong></td>
                                <td>@invoice.ClienteNombre</td>
                                <td>
                                    <span class="badge @(invoice.FormaDePago == FormaDePago.Credito ? "bg-info text-dark" : "bg-light text-dark")">
                                        @invoice.FormaDePago.ToString()
                                    </span>
                                </td>
                                <td>@invoice.Estado</td>
                                <td class="text-end">@invoice.SaldoPendiente.ToString("C")</td>
                                <td class="text-end">@invoice.Total.ToString("C")</td>
                                <td class="text-center">
                                    <a href="@($"invoices/{invoice.Id}")" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye-fill"></i> Ver Detalles
                                    </a>
                                    @if (invoice.FormaDePago == FormaDePago.Credito && invoice.SaldoPendiente > 0)
                                    {
                                        <button class="btn btn-sm btn-success ms-1" @onclick="() => OpenRegisterPaymentModal(invoice.Id)">
                                            <i class="bi bi-cash-coin"></i> Registrar Pago
                                        </button>
                                    }
                                    <a href="/api/downloads/invoice-ride/@invoice.Id" target="_blank" class="btn btn-sm btn-outline-danger" title="Descargar PDF">
                                        <i class="bi bi-file-earmark-pdf"></i> PDF
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<RegisterPaymentModal @bind-IsVisible="showRegistrarPagoModal" 
                      FacturaId="@selectedInvoiceId" 
                      UsuarioIdCreador="@currentUserId" 
                      OnPaymentRegistered="HandlePaymentRegistered" />

@code {
    private List<InvoiceDto>? allInvoices; // Holds all invoices
    private string? errorMessage;

    private string searchTerm = string.Empty; // New property for search
    private bool showRegistrarPagoModal = false;
    private Guid selectedInvoiceId;
    private Guid currentUserId;

    private List<InvoiceDto> FilteredInvoices => string.IsNullOrWhiteSpace(searchTerm)
        ? allInvoices ?? new()
        : allInvoices?.Where(invoice => invoice.NumeroFactura.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                                        (invoice.ClienteNombre?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false))
                      .ToList() ?? new();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        if (user.Identity.IsAuthenticated)
        {
            var userId = user.FindFirstValue(ClaimTypes.NameIdentifier);
            if (!string.IsNullOrEmpty(userId))
            {
                currentUserId = Guid.Parse(userId);
            }
        }
        await LoadInvoices();
    }

    private async Task LoadInvoices()
    {
        try
        {
            allInvoices = await InvoiceService.GetInvoicesAsync(); // Load all invoices
        }
        catch (Exception ex)
        {
            errorMessage = $"No se pudieron cargar las facturas. Por favor, inténtelo de nuevo. Si el problema persiste, contacte a soporte técnico. Detalles: {ex.Message}";
        }
    }

    private void OpenRegisterPaymentModal(Guid invoiceId)
    {
        selectedInvoiceId = invoiceId;
        showRegistrarPagoModal = true;
    }

    private async Task HandlePaymentRegistered()
    {
        showRegistrarPagoModal = false;
        await LoadInvoices();
        StateHasChanged();
    }

    private void GoToCreateInvoice()
    {
        Navigation.NavigateTo("/invoices/create");
    }
}