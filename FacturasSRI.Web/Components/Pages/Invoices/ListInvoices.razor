@page "/invoices"
@attribute [Authorize]
@using FacturasSRI.Application.Dtos
@using FacturasSRI.Application.Interfaces
@inject IInvoiceService InvoiceService
@inject ICustomerService CustomerService
@inject NavigationManager Navigation

<PageTitle>Facturas</PageTitle>

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1>Facturas Emitidas</h1>
        <p>Consulta el historial de facturas generadas.</p>
    </div>
    <button class="btn btn-primary" @onclick="GoToCreateInvoice">
        <i class="bi bi-plus-circle-fill me-2"></i>Crear Nueva Factura
    </button>
</div>

<div class="mb-3">
    <input type="text" class="form-control" placeholder="Buscar facturas por número o cliente..." @bind-value="searchTerm" @bind-value:event="oninput" />
</div>

@if (errorMessage != null)
{
    <div class="alert alert-danger">@errorMessage</div>
}

<div class="card">
    <div class="card-body">
        @if (allInvoices == null) // Check allInvoices for loading state
        {
            <p><em>Cargando facturas...</em></p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Número de Factura</th>
                            <th>Cliente</th>
                            <th>Fecha de Emisión</th>
                            <th>Estado</th>
                            <th>Creado Por</th>
                            <th class="text-end">Total</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var invoice in FilteredInvoices) // Use FilteredInvoices
                        {
                            <tr>
                                <td><strong>@invoice.NumeroFactura</strong></td>
                                <td>@invoice.ClienteNombre</td>
                                <td>@invoice.FechaEmision.ToLocalTime().ToString("g")</td>
                                <td>@invoice.Estado</td>
                                <td>@invoice.CreadoPor</td>
                                <td class="text-end">@invoice.Total.ToString("C")</td>
                                <td class="text-center">
                                    <a href="@($"invoices/{invoice.Id}")" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye-fill"></i> Ver Detalles
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>


@code {
    private List<InvoiceDto>? allInvoices; // Holds all invoices
    private string? errorMessage;

    private string searchTerm = string.Empty; // New property for search

    private List<InvoiceDto> FilteredInvoices => string.IsNullOrWhiteSpace(searchTerm)
        ? allInvoices ?? new()
        : allInvoices?.Where(invoice => invoice.NumeroFactura.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                                        (invoice.ClienteNombre?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false))
                      .ToList() ?? new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            allInvoices = await InvoiceService.GetInvoicesAsync(); // Load all invoices
        }
        catch (Exception ex)
        {
            errorMessage = $"No se pudieron cargar las facturas. Por favor, inténtelo de nuevo. Si el problema persiste, contacte a soporte técnico. Detalles: {ex.Message}";
        }
    }

    private void GoToCreateInvoice()
    {
        Navigation.NavigateTo("/invoices/create");
    }
}