@page "/invoices/{InvoiceId:guid}"
@attribute [Authorize(Roles = "Administrador, Vendedor, Bodeguero")]

@using FacturasSRI.Application.Dtos
@using FacturasSRI.Application.Interfaces
@using FacturasSRI.Domain.Enums
@using Microsoft.AspNetCore.Components.Authorization
@using FacturasSRI.Web.Components.Shared
@inject IInvoiceService InvoiceService
@inject ICobroService CobroService
@inject IUserService UserService
@inject NavigationManager Navigation
@inject IConfiguration Configuration
@inject IJSRuntime JSRuntime

<PageTitle>Detalle de Factura - @(invoice?.NumeroFactura ?? "...")</PageTitle>

@if (invoice == null && !string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}
else if (invoice == null)
{
    <div class="text-center p-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <p class="mt-3">Cargando detalles de la factura...</p>
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title mb-0">Detalle de Factura</h1>
        <div>
            <button class="btn btn-outline-secondary me-2" @onclick="GoBack">
                <i class="bi bi-arrow-left-circle me-2"></i>Volver
            </button>
            
            <a href="/api/public/invoice-ride/@invoice.Id" target="_blank" class="btn btn-danger me-2">
                <i class="bi bi-file-earmark-pdf me-2"></i>Descargar PDF
            </a>
            <AuthorizeView Roles="Administrador, Vendedor">
                @if (invoice.FormaDePago == FormaDePago.Credito)
                {
                    <a href="@($"payments/details/{InvoiceId}")" class="btn btn-info me-2">
                        <i class="bi bi-wallet me-2"></i>Ver Historial de Pagos
                    </a>
                }

                @if (invoice.Estado == EstadoFactura.Autorizada)
                {
                    <button class="btn btn-success me-2" @onclick="ResendEmail" disabled="@sendingEmail">
                        @if (sendingEmail)
                        {
                            <span class="spinner-border spinner-border-sm me-2" aria-hidden="true"></span>
                            <span>Enviando...</span>
                        }
                        else
                        {
                            <i class="bi bi-envelope me-2"></i>
                            <span>Reenviar Correo</span>
                        }
                    </button>
                }

                @if (invoice.FormaDePago == FormaDePago.Credito && invoice.SaldoPendiente > 0 && invoice.FechaVencimiento.HasValue && (invoice.FechaVencimiento.Value - DateTime.Today).Days <= 5)
                {
                    <button class="btn btn-warning me-2" @onclick="SendPaymentReminder" disabled="@sendingEmail">
                        @if (sendingEmail)
                        {
                            <span class="spinner-border spinner-border-sm me-2" aria-hidden="true"></span>
                            <span>Enviando...</span>
                        }
                        else
                        {
                            <i class="bi bi-bell-fill me-2"></i>
                            <span>Enviar Aviso</span>
                        }
                    </button>
                }
                
                @if (invoice.Estado == EstadoFactura.Cancelada && userIsAdmin)
                {
                    <button class="btn btn-warning" @onclick="HandleReactivateInvoice" disabled="@isCheckingStatus">
                        <i class="bi bi-arrow-counterclockwise me-2"></i>
                        <span>Reactivar como Borrador</span>
                    </button>
                }
            </AuthorizeView>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(emailMessage))
    {
        <div class="alert @(emailSuccess ? "alert-success" : "alert-warning") alert-dismissible fade show" role="alert">
            @emailMessage
            <button type="button" class="btn-close" @onclick="() => emailMessage = null"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card invoice-card">
                <div class="card-body p-5">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <img src="/logo.png" alt="Logo" style="max-height: 80px;"/>
                            <h4 class="mt-3">@Configuration["CompanyInfo:NombreComercial"]</h4>
                            <p class="mb-0">@Configuration["CompanyInfo:DireccionMatriz"]</p>
                            <p class="mb-0">RUC: @Configuration["CompanyInfo:Ruc"]</p>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <h2>FACTURA</h2>
                            <h5 class="text-danger">@Configuration["CompanyInfo:EstablishmentCode"]-@Configuration["CompanyInfo:EmissionPointCode"]-@invoice.NumeroFactura</h5>
                            <p class="mb-0"><strong>Fecha de Emisión:</strong> @invoice.FechaEmision.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                    <hr/>
                    <div class="row my-4">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <strong>Facturar a:</strong>
                                </div>
                                <div class="card-body">
                                    <p class="mb-1"><strong>Sr(es):</strong> @invoice.ClienteNombre</p>
                                    <p class="mb-1"><strong>RUC/CI:</strong> @invoice.ClienteIdentificacion</p>
                                    <p class="mb-1"><strong>Dirección:</strong> @invoice.ClienteDireccion</p>
                                    <p class="mb-0"><strong>Email:</strong> @invoice.ClienteEmail</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th class="text-center">Cant.</th>
                                    <th>Descripción</th>
                                    <th class="text-end">Precio Unitario</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in invoice.Items)
                                {
                                    <tr>
                                        <td class="text-center">@item.Cantidad</td>
                                        <td>
                                            <strong>@item.ProductName</strong>
                                            @if(item.Taxes.Any())
                                            {
                                                <br/><small class="text-muted">Impuestos: @string.Join(", ", item.Taxes.Select(t => t.Nombre))</small>
                                            }
                                        </td>
                                        <td class="text-end">@item.PrecioVentaUnitario.ToString("C")</td>
                                        <td class="text-end">@item.Subtotal.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">Información Adicional</h5>
                                     <p><strong>Forma de Pago:</strong> @invoice.FormaDePago.ToString()</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <td class="text-end"><strong>Subtotal:</strong></td>
                                        <td class="text-end" style="width: 150px;">@invoice.SubtotalSinImpuestos.ToString("C")</td>
                                    </tr>
                                    @foreach (var summary in invoice.TaxSummaries)
                                    {
                                        <tr>
                                            <td class="text-end"><strong>@summary.TaxName (@summary.TaxRate.ToString("0.##")%):</strong></td>
                                            <td class="text-end">@summary.Amount.ToString("C")</td>
                                        </tr>
                                    }
                                    <tr class="fs-5 table-light">
                                        <td class="text-end"><strong>Total:</strong></td>
                                        <td class="text-end"><strong>@invoice.Total.ToString("C")</strong></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0"><i class="bi bi-shield-check me-2"></i>Estado SRI</h5>
                </div>
                <div class="card-body">
                    @if(sriCheckMessage != null)
                    {
                        <div class="alert alert-info">@sriCheckMessage</div>
                    }
                    
                    <div class="mb-3">
                        <label class="form-label">Estado:</label>
                        <input type="text" class="form-control" value="@invoice.Estado.ToString()" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Clave de Acceso:</label>
                        <textarea class="form-control" rows="3" readonly>@invoice.ClaveAcceso</textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Número de Autorización:</label>
                        <input type="text" class="form-control" value="@(invoice.NumeroAutorizacion ?? "N/A")" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Respuesta del SRI:</label>
                        <textarea class="form-control" rows="4" readonly>@invoice.RespuestaSRI</textarea>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <AuthorizeView Roles="Administrador, Vendedor">
                            @if (invoice.Estado == EstadoFactura.Borrador)
                            {
                                <div class="alert alert-warning py-2 text-center small mb-2">
                                    <i class="bi bi-info-circle-fill me-1"></i>
                                    Esta factura es un <strong>borrador</strong>. No tiene validez fiscal hasta que sea emitida.
                                </div>
                                <button class="btn btn-primary" @onclick="OpenConfirmationModal" disabled="@isCheckingStatus">
                                    <i class="bi bi-send-check-fill me-2"></i>
                                    <span>Emitir Factura</span>
                                </button>
                            }
                            else
                            {
                                @if (invoice.Estado == EstadoFactura.EnviadaSRI)
                                {
                                    <div class="alert alert-warning py-2 text-center small mb-2">
                                        <i class="bi bi-info-circle-fill me-1"></i>
                                        La factura fue recibida. <strong>Debe autorizarla</strong> para enviar el correo.
                                    </div>
                                }
                                @if (invoice.Estado == EstadoFactura.Pendiente)
                                {
                                    <div class="alert alert-danger py-2 text-center small mb-2">
                                        <i class="bi bi-exclamation-circle-fill me-1"></i>
                                        El SRI no respondió al emitir. <strong>Intente enviar de nuevo.</strong>
                                    </div>
                                }

                                <button class="btn @(invoice.Estado == EstadoFactura.EnviadaSRI || invoice.Estado == EstadoFactura.Pendiente ? "btn-primary pulse-button" : "btn-outline-primary")"
                                        @onclick="HandleCheckSriStatus"
                                        disabled="@(isCheckingStatus || invoice.Estado == EstadoFactura.Autorizada || invoice.Estado == EstadoFactura.Cancelada)">
                                    @if (isCheckingStatus)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" aria-hidden="true"></span>
                                        <span>Conectando con SRI...</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-clockwise me-2"></i>
                                        <span>
                                            @if (invoice.Estado == EstadoFactura.Pendiente)
                                            {
                                                <text>Reintentar Envío SRI</text>
                                            }
                                            else if (invoice.Estado == EstadoFactura.EnviadaSRI)
                                            {
                                                <text>Autorizar y Enviar Correo</text>
                                            }
                                            else
                                            {
                                                <text>Consultar Estado SRI</text>
                                            }
                                        </span>
                                    }
                                </button>
                            }
                        </AuthorizeView>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0"><i class="bi bi-wallet2 me-2"></i>Historial de Pagos</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <p class="fs-4"><strong>Saldo Pendiente:</strong> <span class="text-danger">@invoice.SaldoPendiente.ToString("C")</span></p>
                    </div>

                    @if(cobros == null)
                    {
                        <p>Cargando pagos...</p>
                    }
                    else if (!cobros.Any())
                    {
                        <p>No se han registrado pagos para esta factura.</p>
                    }
                    else
                    {
                        <ul class="list-group list-group-flush">
                            @foreach(var cobro in cobros)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <p class="mb-0"><strong>@cobro.Monto.ToString("C")</strong> - @cobro.MetodoDePago</p>
                                        <small class="text-muted">@cobro.FechaCobro.ToString("g") por @cobro.CreadoPor</small>
                                    </div>
                                    @if (!string.IsNullOrEmpty(cobro.ComprobantePagoPath))
                                    {
                                        <button class="btn btn-sm btn-outline-success" @onclick="() => DownloadCobroReceipt(cobro.Id)">
                                            <i class="bi bi-download"></i>
                                        </button>
                                    }
                                </li>
                            }
                        </ul>
                    }
                </div>
                @if(invoice.FormaDePago == FormaDePago.Credito && invoice.SaldoPendiente > 0)
                {
                <AuthorizeView Roles="Administrador, Vendedor">
                    <div class="card-footer text-center">
                        <a href="@($"invoices/register-payment/{InvoiceId}")" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-2"></i>Registrar Pago
                        </a>
                    </div>
                </AuthorizeView>
                }
            </div>
        </div>
    </div>
}

@if (showConfirmationModal)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar Emisión</h5>
                    <button type="button" class="btn-close" @onclick="CloseConfirmationModal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>¿Está seguro de que desea emitir esta factura al SRI?</p>
                    <p class="text-danger">Una vez emitida, la factura no podrá ser cancelada directamente y su estado cambiará a <strong>Pendiente</strong> para ser procesada por el SRI.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseConfirmationModal">Cancelar</button>
                    <button type="button" class="btn btn-primary" @onclick="HandleIssueInvoice" disabled="@isCheckingStatus">
                        @if (isCheckingStatus)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Emitir Factura
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

<style>
    .pulse-button {
        animation: pulse 2s infinite;
    }
    @@keyframes pulse {
        0% { box-shadow: 0 0 0 0 rgba(13, 110, 253, 0.7); }
        70% { box-shadow: 0 0 0 10px rgba(13, 110, 253, 0); }
        100% { box-shadow: 0 0 0 0 rgba(13, 110, 253, 0); }
    }
</style>

@code {
    [Parameter]
    public Guid InvoiceId { get; set; }

    [CascadingParameter]
    private Task<AuthenticationState> AuthenticationStateTask { get; set; } = default!;

    private InvoiceDetailViewDto? invoice;
    private List<CobroDto> cobros = new();
    
    private string? errorMessage;
    private string? sriCheckMessage;
    private string? emailMessage;

    private bool isCheckingStatus = false;
    private bool sendingEmail = false;
    private bool emailSuccess = false;
    private Guid currentUserId;
    private bool userIsAdmin = false;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateTask;
        var user = authState.User;
        if (user.Identity.IsAuthenticated)
        {
            var userId = user.FindFirst(c => c.Type == "sub")?.Value;
            if(!string.IsNullOrEmpty(userId))
            {
                currentUserId = Guid.Parse(userId);
            }
            userIsAdmin = user.IsInRole("Administrador");
        }
        await LoadInvoiceData();
    }

    private async Task LoadInvoiceData()
    {
        try
        {
            invoice = await InvoiceService.GetInvoiceDetailByIdAsync(InvoiceId);
            if (invoice != null)
            {
                cobros = await CobroService.GetCobrosByFacturaIdAsync(InvoiceId);
            }
            else
            {
                errorMessage = "No se encontró la factura solicitada o no se pudo cargar su detalle.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"No se pudieron cargar los detalles de la factura. {ex.Message}";
        }
    }

    private async Task DownloadCobroReceipt(Guid cobroId)
    {
        var url = $"/api/downloads/invoice-receipt/{cobroId}";
        await JSRuntime.InvokeVoidAsync("open", url, "_blank");
    }

    private async Task HandleCheckSriStatus()
    {
        isCheckingStatus = true;
        sriCheckMessage = null;
        errorMessage = null;

        try
        {
            // Esta función ahora es inteligente: si está Pendiente hace recepción, si no, hace autorización
            var updatedInvoice = await InvoiceService.CheckSriStatusAsync(InvoiceId);
            
            if (updatedInvoice != null)
            {
                invoice = updatedInvoice;
                sriCheckMessage = $"Estado actualizado a las {DateTime.Now:T}: {invoice.Estado}";
            }
            else
            {
                errorMessage = "No se pudo actualizar el estado de la factura.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error SRI: {ex.Message}";
        }
        finally
        {
            isCheckingStatus = false;
        }
    }

    private async Task ResendEmail()
    {
        sendingEmail = true;
        emailMessage = null;

        try
        {
            await InvoiceService.ResendInvoiceEmailAsync(InvoiceId);
            emailSuccess = true;
            emailMessage = "Correo enviado exitosamente al cliente.";
        }
        catch (Exception ex)
        {
            emailSuccess = false;
            emailMessage = $"Error al enviar correo: {ex.Message}";
        }
        finally
        {
            sendingEmail = false;
        }
    }

    private async Task SendPaymentReminder()
    {
        sendingEmail = true;
        emailMessage = null;

        try
        {
            await InvoiceService.SendPaymentReminderEmailAsync(InvoiceId);
            emailSuccess = true;
            emailMessage = "Recordatorio de pago enviado exitosamente al cliente.";
        }
        catch (Exception ex)
        {
            emailSuccess = false;
            emailMessage = $"Error al enviar el recordatorio: {ex.Message}";
        }
        finally
        {
            sendingEmail = false;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/invoices");
    }

    private bool showConfirmationModal = false;
    private void OpenConfirmationModal() => showConfirmationModal = true;
    private void CloseConfirmationModal() => showConfirmationModal = false;

    private async Task HandleIssueInvoice()
    {
        isCheckingStatus = true;
        errorMessage = null;

        try
        {
            var updatedInvoice = await InvoiceService.IssueDraftInvoiceAsync(InvoiceId);
            if (updatedInvoice != null)
            {
                invoice = updatedInvoice;
                sriCheckMessage = $"Factura emitida y enviada al SRI a las {DateTime.Now:T}. Nuevo estado: {invoice.Estado}";
            }
            else
            {
                errorMessage = "No se pudo emitir la factura.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al emitir: {ex.Message}";
        }
        finally
        {
            isCheckingStatus = false;
            CloseConfirmationModal();
        }
    }

    private async Task HandleReactivateInvoice()
    {
        isCheckingStatus = true;
        errorMessage = null;

        try
        {
            await InvoiceService.ReactivateCancelledInvoiceAsync(InvoiceId);
            await LoadInvoiceData(); // Recargamos los datos
            sriCheckMessage = "La factura ha sido reactivada como borrador.";
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al reactivar: {ex.Message}";
        }
        finally
        {
            isCheckingStatus = false;
        }
    }
}