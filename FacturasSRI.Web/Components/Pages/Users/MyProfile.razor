@page "/profile"
@attribute [Authorize]
@using System.Security.Claims
@using FacturasSRI.Application.Dtos
@using FacturasSRI.Application.Interfaces
@inject IUserService UserService
@inject ICustomerService CustomerService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation

<PageTitle>Mi Perfil</PageTitle>

<h3>Mi Perfil</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger mb-4" role="alert">
        @errorMessage
        <button type="button" class="btn-close float-end" @onclick="ClearErrorMessage" aria-label="Close"></button>
    </div>
}

@if (profile == null)
{
    <p><em>Cargando perfil...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Información del Perfil
                </div>
                <div class="card-body">
                    @if (profile.UserType == "User")
                    {
                        <EditForm Model="@updateProfileDto" OnValidSubmit="HandleUpdateUserProfile">
                            <DataAnnotationsValidator />
                            <div class="mb-3">
                                <label class="form-label">Correo Electrónico</label>
                                <input type="email" class="form-control" value="@profile.Email" readonly />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Primer Nombre</label>
                                <InputText class="form-control" @bind-Value="updateProfileDto.PrimerNombre" />
                                <ValidationMessage For="@(() => updateProfileDto.PrimerNombre)" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Segundo Nombre</label>
                                <InputText class="form-control" @bind-Value="updateProfileDto.SegundoNombre" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Primer Apellido</label>
                                <InputText class="form-control" @bind-Value="updateProfileDto.PrimerApellido" />
                                <ValidationMessage For="@(() => updateProfileDto.PrimerApellido)" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Segundo Apellido</label>
                                <InputText class="form-control" @bind-Value="updateProfileDto.SegundoApellido" />
                            </div>
                            <button type="submit" class="btn btn-primary">Actualizar Perfil</button>
                        </EditForm>
                    }
                    else if (profile.UserType == "Customer")
                    {
                        <EditForm Model="@updateCustomerDto" OnValidSubmit="HandleUpdateCustomerProfile">
                            <DataAnnotationsValidator />
                            <div class="mb-3">
                                <label class="form-label">Correo Electrónico</label>
                                <input type="email" class="form-control" value="@profile.Email" readonly />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Razón Social</label>
                                <InputText class="form-control" @bind-Value="updateCustomerDto.RazonSocial" />
                                <ValidationMessage For="@(() => updateCustomerDto.RazonSocial)" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Dirección</label>
                                <InputText class="form-control" @bind-Value="updateCustomerDto.Direccion" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Teléfono</label>
                                <InputText class="form-control" @bind-Value="updateCustomerDto.Telefono" />
                            </div>
                            <button type="submit" class="btn btn-primary">Actualizar Perfil</button>
                        </EditForm>
                    }
                    @if (!string.IsNullOrEmpty(profileMessage))
                    {
                        <div class="alert alert-success mt-3">@profileMessage</div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Cambiar Contraseña
                </div>
                <div class="card-body">
                    <EditForm Model="@changePasswordDto" OnValidSubmit="HandleChangePassword">
                        <DataAnnotationsValidator />
                        <div class="mb-3">
                            <label class="form-label">Contraseña Actual</label>
                            <InputText type="password" class="form-control" @bind-Value="changePasswordDto.OldPassword" />
                            <ValidationMessage For="@(() => changePasswordDto.OldPassword)" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Nueva Contraseña</label>
                            <InputText type="password" class="form-control" @bind-Value="changePasswordDto.NewPassword" />
                            <ValidationMessage For="@(() => changePasswordDto.NewPassword)" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Confirmar Nueva Contraseña</label>
                            <InputText type="password" class="form-control" @bind-Value="changePasswordDto.ConfirmPassword" />
                            <ValidationMessage For="@(() => changePasswordDto.ConfirmPassword)" />
                        </div>
                        <button type="submit" class="btn btn-primary">Cambiar Contraseña</button>
                        @if (!string.IsNullOrEmpty(passwordMessage))
                        {
                            <div class="alert @(passwordChangeSuccess ? "alert-success" : "alert-danger") mt-3">@passwordMessage</div>
                        }
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private ProfileViewModel? profile;
    private UpdateProfileDto updateProfileDto = new();
    private CustomerDto updateCustomerDto = new();
    private ChangePasswordDto changePasswordDto = new();
    
    private string? profileMessage;
    private string? passwordMessage;
    private bool passwordChangeSuccess = false;
    private string? userId;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            userId = user.FindFirstValue(ClaimTypes.NameIdentifier);

            if (string.IsNullOrEmpty(userId))
            {
                errorMessage = "No se pudo identificar al usuario actual.";
                return;
            }

            if (user.HasClaim(c => c.Type == "UserType" && c.Value == "Cliente"))
            {
                // It's a Customer
                var customer = await CustomerService.GetCustomerByIdAsync(Guid.Parse(userId));
                if (customer != null)
                {
                    profile = new ProfileViewModel
                    {
                        UserType = "Customer",
                        Email = customer.Email,
                        RazonSocial = customer.RazonSocial,
                        Direccion = customer.Direccion,
                        Telefono = customer.Telefono
                    };
                    updateCustomerDto = customer; // Use the full DTO for updates
                }
                else
                {
                    errorMessage = "No se pudo cargar la información del perfil del cliente. El cliente podría no existir o estar inactivo.";
                }
            }
            else
            {
                // It's a staff User
                var userProfile = await UserService.GetUserProfileAsync(userId);
                if (userProfile != null)
                {
                    profile = new ProfileViewModel
                    {
                        UserType = "User",
                        Email = userProfile.Email,
                        PrimerNombre = userProfile.PrimerNombre,
                        SegundoNombre = userProfile.SegundoNombre,
                        PrimerApellido = userProfile.PrimerApellido,
                        SegundoApellido = userProfile.SegundoApellido
                    };
                    updateProfileDto = new UpdateProfileDto
                    {
                        PrimerNombre = userProfile.PrimerNombre,
                        SegundoNombre = userProfile.SegundoNombre,
                        PrimerApellido = userProfile.PrimerApellido,
                        SegundoApellido = userProfile.SegundoApellido
                    };
                }
                else
                {
                    errorMessage = "No se pudo cargar la información del perfil del usuario. El usuario podría no existir o estar inactivo.";
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error al cargar el perfil: {ex.Message}";
        }
    }

    private async Task HandleUpdateUserProfile()
    {
        // Logic for updating staff user
        if (string.IsNullOrEmpty(userId)) return;
        try
        {
            await UserService.UpdateUserProfileAsync(userId, updateProfileDto);
            profileMessage = "Perfil actualizado correctamente.";
            StateHasChanged();
            await Task.Delay(3000);
            profileMessage = null;
            StateHasChanged();
        }
        catch (Exception ex) { errorMessage = $"Error al actualizar: {ex.Message}"; }
    }
    
    private async Task HandleUpdateCustomerProfile()
    {
        // Logic for updating customer
        if (string.IsNullOrEmpty(userId)) return;
        try
        {
            // We need to use the full CustomerDto for the update method
            await CustomerService.UpdateCustomerAsync(updateCustomerDto);
            profileMessage = "Perfil actualizado correctamente.";
            StateHasChanged();
            await Task.Delay(3000);
            profileMessage = null;
            StateHasChanged();
        }
        catch (Exception ex) { errorMessage = $"Error al actualizar: {ex.Message}"; }
    }

    private async Task HandleChangePassword()
    {
        if (string.IsNullOrEmpty(userId) || profile == null) return;
        
        try
        {
            if (profile.UserType == "Customer")
            {
                passwordChangeSuccess = await CustomerService.ChangePasswordAsync(userId, changePasswordDto);
            }
            else
            {
                passwordChangeSuccess = await UserService.ChangePasswordAsync(userId, changePasswordDto);
            }

            if (passwordChangeSuccess)
            {
                passwordMessage = "Contraseña cambiada correctamente.";
                changePasswordDto = new(); // Reset form
            }
            else
            {
                passwordMessage = "La contraseña actual es incorrecta o los datos no son válidos.";
            }
        }
        catch (Exception ex)
        {
            passwordChangeSuccess = false;
            passwordMessage = $"Error al cambiar la contraseña: {ex.Message}";
        }
        
        StateHasChanged();
        await Task.Delay(5000);
        passwordMessage = null;
        StateHasChanged();
    }

    private void ClearErrorMessage()
    {
        errorMessage = null;
    }
}
