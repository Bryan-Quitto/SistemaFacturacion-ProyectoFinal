@page "/profile"
@attribute [Authorize]
@using System.Security.Claims
@using FacturasSRI.Application.Dtos
@using FacturasSRI.Application.Interfaces
@inject IUserService UserService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation

<PageTitle>Mi Perfil</PageTitle>

<h3>Mi Perfil</h3>

@if (userProfile == null)
{
    <p><em>Cargando perfil...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Información del Perfil
                </div>
                <div class="card-body">
                    <EditForm Model="@updateProfileDto" OnValidSubmit="HandleUpdateProfile">
                        <DataAnnotationsValidator />
                        <div class="mb-3">
                            <label class="form-label">Correo Electrónico</label>
                            <input type="email" class="form-control" value="@userProfile.Email" readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Primer Nombre</label>
                            <InputText class="form-control" @bind-Value="updateProfileDto.PrimerNombre" />
                            <ValidationMessage For="@(() => updateProfileDto.PrimerNombre)" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Segundo Nombre</label>
                            <InputText class="form-control" @bind-Value="updateProfileDto.SegundoNombre" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Primer Apellido</label>
                            <InputText class="form-control" @bind-Value="updateProfileDto.PrimerApellido" />
                            <ValidationMessage For="@(() => updateProfileDto.PrimerApellido)" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Segundo Apellido</label>
                            <InputText class="form-control" @bind-Value="updateProfileDto.SegundoApellido" />
                        </div>
                        <button type="submit" class="btn btn-primary">Actualizar Perfil</button>
                        @if (!string.IsNullOrEmpty(profileMessage))
                        {
                            <div class="alert alert-success mt-3">@profileMessage</div>
                        }
                    </EditForm>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Cambiar Contraseña
                </div>
                <div class="card-body">
                    <EditForm Model="@changePasswordDto" OnValidSubmit="HandleChangePassword">
                        <DataAnnotationsValidator />
                        <div class="mb-3">
                            <label class="form-label">Contraseña Actual</label>
                            <InputText type="password" class="form-control" @bind-Value="changePasswordDto.OldPassword" />
                            <ValidationMessage For="@(() => changePasswordDto.OldPassword)" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Nueva Contraseña</label>
                            <InputText type="password" class="form-control" @bind-Value="changePasswordDto.NewPassword" />
                            <ValidationMessage For="@(() => changePasswordDto.NewPassword)" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Confirmar Nueva Contraseña</label>
                            <InputText type="password" class="form-control" @bind-Value="changePasswordDto.ConfirmPassword" />
                            <ValidationMessage For="@(() => changePasswordDto.ConfirmPassword)" />
                        </div>
                        <button type="submit" class="btn btn-primary">Cambiar Contraseña</button>
                        @if (!string.IsNullOrEmpty(passwordMessage))
                        {
                            <div class="alert @(passwordChangeSuccess ? "alert-success" : "alert-danger") mt-3">@passwordMessage</div>
                        }
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private UserDto? userProfile;
    private UpdateProfileDto updateProfileDto = new();
    private ChangePasswordDto changePasswordDto = new();
    private string? profileMessage;
    private string? passwordMessage;
    private bool passwordChangeSuccess = false;
    private string? userId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        userId = user.FindFirstValue(ClaimTypes.NameIdentifier);

        if (!string.IsNullOrEmpty(userId))
        {
            userProfile = await UserService.GetUserProfileAsync(userId);
            if (userProfile != null)
            {
                updateProfileDto = new UpdateProfileDto
                {
                    PrimerNombre = userProfile.PrimerNombre,
                    SegundoNombre = userProfile.SegundoNombre,
                    PrimerApellido = userProfile.PrimerApellido,
                    SegundoApellido = userProfile.SegundoApellido
                };
            }
        }
    }

    private async Task HandleUpdateProfile()
    {
        if (string.IsNullOrEmpty(userId)) return;

        await UserService.UpdateUserProfileAsync(userId, updateProfileDto);
        profileMessage = "Perfil actualizado correctamente.";
        await InvokeAsync(() => StateHasChanged());
        await Task.Delay(3000);
        profileMessage = null;
        await InvokeAsync(() => StateHasChanged());
    }

    private async Task HandleChangePassword()
    {
        if (string.IsNullOrEmpty(userId)) return;

        passwordChangeSuccess = await UserService.ChangePasswordAsync(userId, changePasswordDto);
        if (passwordChangeSuccess)
        {
            passwordMessage = "Contraseña cambiada correctamente.";
            changePasswordDto = new(); // Reset form
        }
        else
        {
            passwordMessage = "La contraseña actual es incorrecta.";
        }
        
        await InvokeAsync(() => StateHasChanged());
        await Task.Delay(5000);
        passwordMessage = null;
        await InvokeAsync(() => StateHasChanged());
    }
}
