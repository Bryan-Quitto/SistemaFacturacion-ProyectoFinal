@page "/users/create"
@attribute [Authorize(Roles = "Administrador")]
@using System.ComponentModel.DataAnnotations
@using FacturasSRI.Application.Dtos
@using FacturasSRI.Application.Interfaces
@inject IUserService UserService
@inject IRoleService RoleService
@inject NavigationManager Navigation

<PageTitle>Crear Usuario</PageTitle>

<h3>Crear Nuevo Usuario</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert @(isSuccess ? "alert-success" : "alert-danger") mb-4" role="alert">
        @errorMessage
        <button type="button" class="btn-close float-end" @onclick="ClearErrorMessage" aria-label="Close"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <EditForm Model="@createUserModel" OnValidSubmit="@HandleAddUser">
            <DataAnnotationsValidator />

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label class="form-label">Primer Nombre</label>
                    <InputText class="form-control" @bind-Value="createUserModel.PrimerNombre" />
                    <ValidationMessage For="@(() => createUserModel.PrimerNombre)" />
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Segundo Nombre</label>
                    <InputText class="form-control" @bind-Value="createUserModel.SegundoNombre" />
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Primer Apellido</label>
                    <InputText class="form-control" @bind-Value="createUserModel.PrimerApellido" />
                    <ValidationMessage For="@(() => createUserModel.PrimerApellido)" />
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Segundo Apellido</label>
                    <InputText class="form-control" @bind-Value="createUserModel.SegundoApellido" />
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Correo Electrónico</label>
                    <InputText type="email" class="form-control" @bind-Value="createUserModel.Email" />
                    <ValidationMessage For="@(() => createUserModel.Email)" />
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Rol</label>
                    @if (allRoles.Any())
                    {
                        <InputSelect class="form-select" @bind-Value="selectedRoleId">
                            <option value="@Guid.Empty">Seleccione un rol...</option>
                            @foreach (var rol in allRoles)
                            {
                                <option value="@rol.Id">@rol.Nombre</option>
                            }
                        </InputSelect>
                    }
                    else
                    {
                        <p>Cargando roles...</p>
                    }
                </div>
            </div>
            
            <div class="mt-3">
                <button type="button" class="btn btn-secondary" @onclick="GoToList">Cancelar</button>
                <button type="submit" class="btn btn-primary">Guardar Usuario</button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private List<RoleDto> allRoles = new();
    private CreateUserModel createUserModel = new();
    private Guid selectedRoleId;
    private string? errorMessage;
    private bool isSuccess;
    
    protected override async Task OnInitializedAsync()
    {
        try
        {
            allRoles = await RoleService.GetRolesAsync();
            if (allRoles.Any())
            {
                selectedRoleId = allRoles.First().Id;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar roles: {ex.Message}";
            isSuccess = false;
            StateHasChanged();
        }
    }

    private async Task HandleAddUser()
    {
        errorMessage = null; // Clear previous errors
        isSuccess = false;

        var newUser = new UserDto
        {
            PrimerNombre = createUserModel.PrimerNombre,
            SegundoNombre = createUserModel.SegundoNombre,
            PrimerApellido = createUserModel.PrimerApellido,
            SegundoApellido = createUserModel.SegundoApellido,
            Email = createUserModel.Email,
            RolesId = new List<Guid> { selectedRoleId }
        };
        
        try
        {
            await UserService.CreateUserAsync(newUser);
            isSuccess = true;
            errorMessage = "Usuario creado exitosamente!";
            Navigation.NavigateTo("/users");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al crear el usuario: {ex.Message}";
            isSuccess = false;
        }
        finally
        {
            StateHasChanged(); // Ensure UI updates to show message
        }
    }

    private void GoToList()
    {
        Navigation.NavigateTo("/users");
    }

    private void ClearErrorMessage()
    {
        errorMessage = null;
        isSuccess = false;
        StateHasChanged();
    }

    public class CreateUserModel
    {
        [Required(ErrorMessage = "El primer nombre es requerido.")]
        public string PrimerNombre { get; set; } = string.Empty;
        public string SegundoNombre { get; set; } = string.Empty;
        [Required(ErrorMessage = "El primer apellido es requerido.")]
        public string PrimerApellido { get; set; } = string.Empty;
        public string SegundoApellido { get; set; } = string.Empty;
        [Required(ErrorMessage = "El correo electrónico es requerido.")]
        [EmailAddress(ErrorMessage = "El formato del correo no es válido.")]
        public string Email { get; set; } = string.Empty;
    }
}