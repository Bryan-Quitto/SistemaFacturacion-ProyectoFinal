@page "/products"
@attribute [Authorize]

@using System.Net.Http.Json
@using FacturasSRI.Application.Dtos
@using FacturasSRI.Web.Services
@inject ApiClient ApiClient

<PageTitle>Productos</PageTitle>

<div class="page-header">
    <h1>Gestión de Productos</h1>
    <p>Añade, edita y administra tus productos.</p>
</div>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

<div class="card mb-4">
    <div class="card-header">
        <h3>Añadir Nuevo Producto</h3>
    </div>
    <div class="card-body">
        <EditForm Model="@newProduct" OnValidSubmit="@HandleAddProduct">
            <DataAnnotationsValidator />
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre</label>
                        <InputText id="nombre" class="form-control" @bind-Value="newProduct.Nombre" />
                        <ValidationMessage For="@(() => newProduct.Nombre)" />
                    </div>
                    <div class="mb-3">
                        <label for="codigoPrincipal" class="form-label">Código Principal</label>
                        <InputText id="codigoPrincipal" class="form-control" @bind-Value="newProduct.CodigoPrincipal" />
                        <ValidationMessage For="@(() => newProduct.CodigoPrincipal)" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="descripcion" class="form-label">Descripción</label>
                        <InputText id="descripcion" class="form-control" @bind-Value="newProduct.Descripcion" />
                    </div>
                    <div class="mb-3">
                        <label for="precioVentaUnitario" class="form-label">Precio de Venta Unitario</label>
                        <InputNumber id="precioVentaUnitario" class="form-control" @bind-Value="newProduct.PrecioVentaUnitario" />
                        <ValidationMessage For="@(() => newProduct.PrecioVentaUnitario)" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-check form-check-inline">
                        <InputCheckbox id="manejaInventario" class="form-check-input" @bind-Value="newProduct.ManejaInventario" />
                        <label for="manejaInventario" class="form-check-label">Maneja Inventario</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <InputCheckbox id="manejaLotes" class="form-check-input" @bind-Value="newProduct.ManejaLotes" />
                        <label for="manejaLotes" class="form-check-label">Maneja Lotes</label>
                    </div>
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-plus-circle-fill me-2"></i>Añadir Producto
                </button>
            </div>
        </EditForm>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h3>Listado de Productos</h3>
    </div>
    <div class="card-body">
        @if (products == null)
        {
            <p><em>Cargando...</em></p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Código Principal</th>
                            <th>Precio Unitario</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in products)
                        {
                            <tr>
                                <td>@product.Nombre</td>
                                <td>@product.CodigoPrincipal</td>
                                <td>@product.PrecioVentaUnitario.ToString("C")</td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a href="@($"stock/{product.Id}")" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-box-seam"></i> Stock
                                        </a>
                                        <button class="btn btn-sm btn-outline-primary" @onclick="() => OpenEditModal(product)">
                                            <i class="bi bi-pencil-square"></i> Editar
                                        </button>
                                        <button class="btn btn-sm btn-outline-info" @onclick="() => OpenAssignTaxesModal(product)">
                                            <i class="bi bi-percent"></i> Impuestos
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => HandleDeleteProduct(product.Id)">
                                            <i class="bi bi-trash"></i> Desactivar
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>


@if (productToEdit != null)
{
    <EditProductModal Product="productToEdit" IsVisible="isEditModalVisible" OnClose="CloseEditModal" />
}

@if (selectedProduct != null)
{
    <AssignTaxesModal Product="selectedProduct" IsVisible="isAssignTaxesModalVisible" OnClose="CloseAssignTaxesModal" />
}

@code {
    private List<ProductDto>? products;
    private ProductDto newProduct = new();
    private ProductDto? selectedProduct;
    private bool isAssignTaxesModalVisible = false;
    private string? errorMessage;

    private ProductDto? productToEdit;
    private bool isEditModalVisible = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        errorMessage = null;
        try
        {
            var http = await ApiClient.GetHttpClientAsync();
            products = await http.GetFromJsonAsync<List<ProductDto>>("api/products");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar productos: {ex.Message}";
        }
    }

    private async Task HandleAddProduct()
    {
        errorMessage = null;
        try
        {
            var http = await ApiClient.GetHttpClientAsync();
            var response = await http.PostAsJsonAsync("api/products", newProduct);
            if (response.IsSuccessStatusCode)
            {
                newProduct = new();
                await LoadProducts();
            }
            else
            {
                errorMessage = "Error al crear el producto.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al crear producto: {ex.Message}";
        }
    }

    private async Task HandleDeleteProduct(Guid id)
    {
        errorMessage = null;
        try
        {
            var http = await ApiClient.GetHttpClientAsync();
            var response = await http.DeleteAsync($"api/products/{id}");
            if (response.IsSuccessStatusCode)
            {
                await LoadProducts();
            }
            else
            {
                errorMessage = "Error al desactivar el producto.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al desactivar producto: {ex.Message}";
        }
    }

    private void OpenAssignTaxesModal(ProductDto product)
    {
        selectedProduct = product;
        isAssignTaxesModalVisible = true;
    }

    private void CloseAssignTaxesModal()
    {
        isAssignTaxesModalVisible = false;
        selectedProduct = null;
    }

    private void OpenEditModal(ProductDto product)
    {
        productToEdit = new ProductDto
        {
            Id = product.Id,
            Nombre = product.Nombre,
            CodigoPrincipal = product.CodigoPrincipal,
            Descripcion = product.Descripcion,
            PrecioVentaUnitario = product.PrecioVentaUnitario,
            ManejaInventario = product.ManejaInventario,
            ManejaLotes = product.ManejaLotes
        };
        isEditModalVisible = true;
    }

    private async Task CloseEditModal()
    {
        isEditModalVisible = false;
        productToEdit = null;
        await LoadProducts();
        StateHasChanged();
    }
}