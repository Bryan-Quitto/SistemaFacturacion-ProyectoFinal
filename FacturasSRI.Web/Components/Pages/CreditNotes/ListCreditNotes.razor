@page "/credit-notes"
@attribute [Authorize(Roles = "Administrador, Vendedor")]
@using FacturasSRI.Application.Dtos
@using FacturasSRI.Application.Interfaces
@using FacturasSRI.Domain.Enums
@inject ICreditNoteService CreditNoteService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Notas de Crédito</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Notas de Crédito Emitidas</h1>
    <!-- Botón informativo que redirige a facturas para crear una nueva -->
    <button class="btn btn-outline-primary" @onclick='() => Navigation.NavigateTo("invoices")'>
        <i class="bi bi-plus-circle me-2"></i>Nueva (Desde Factura)
    </button>
</div>

<!-- FILTROS -->
<div class="row g-2 mb-3">
    <div class="col-md-5">
        <input type="text" class="form-control" placeholder="Buscar por número, factura o cliente..." 
               @bind-value="searchTerm" @bind-value:event="oninput" />
    </div>
    <div class="col-md-4">
        <InputSelect class="form-select" @bind-Value="selectedStatus">
            <option value="">Todos los estados</option>
            @foreach (var s in Enum.GetValues(typeof(EstadoNotaDeCredito)))
            {
                <option value="@s">@s.ToString()</option>
            }
        </InputSelect>
    </div>
</div>

@if (errorMessage != null)
{
    <div class="alert alert-danger mb-4" role="alert">
        @errorMessage
    </div>
}

@if (allCreditNotes == null)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <p class="mt-2 text-muted">Cargando notas de crédito...</p>
    </div>
}
else if (!FilteredCreditNotes.Any())
{
    <div class="alert alert-light border text-center py-5">
        <i class="bi bi-inbox display-6 text-muted"></i>
        <p class="mt-3 mb-0">No se encontraron notas de crédito.</p>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Número NC</th>
                    <th>Factura Afectada</th>
                    <th>Cliente</th>
                    <th>Fecha Emisión</th>
                    <th>Estado SRI</th>
                    <th class="text-end">Total</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var nc in FilteredCreditNotes)
                {
                    <tr>
                        <td class="fw-bold text-primary">@nc.NumeroNotaCredito</td>
                        <td>
                            <span class="badge bg-light text-dark border">
                                <i class="bi bi-receipt me-1"></i>@nc.NumeroFacturaModificada
                            </span>
                        </td>
                        <td>
                            <div class="fw-medium">@nc.ClienteNombre</div>
                            @if(!string.IsNullOrEmpty(nc.RazonModificacion))
                            {
                                <small class="text-muted d-block text-truncate" style="max-width: 200px;">
                                    Motivo: @nc.RazonModificacion
                                </small>
                            }
                        </td>
                        <td>@nc.FechaEmision.ToShortDateString()</td>
                        <td>
                            @GetStatusBadge(nc.Estado)
                        </td>
                        <td class="text-end fw-bold">@nc.Total.ToString("C")</td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a href="@($"credit-notes/{nc.Id}")" class="btn btn-sm btn-outline-secondary" title="Ver Detalles">
                                    <i class="bi bi-eye-fill"></i>
                                </a>

                                @if (nc.Estado == EstadoNotaDeCredito.Borrador)
                                {
                                    <a href="@($"credit-notes/edit/{nc.Id}")" class="btn btn-sm btn-outline-primary" title="Editar Borrador">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <button class="btn btn-sm btn-outline-danger" title="Cancelar Borrador" @onclick="() => OpenCancelModal(nc.Id)">
                                        <i class="bi bi-x-circle-fill"></i>
                                    </button>
                                }
                                else if (nc.Estado == EstadoNotaDeCredito.Cancelada && userIsAdmin)
                                {
                                    <button class="btn btn-sm btn-outline-warning" title="Reactivar Borrador" @onclick="() => ReactivateCreditNote(nc.Id)">
                                        <i class="bi bi-arrow-counterclockwise"></i>
                                    </button>
                                }
                                else if (nc.Estado == EstadoNotaDeCredito.Autorizada)
                                {
                                    <a href="/api/downloads/nc-ride/@nc.Id" target="_blank" class="btn btn-sm btn-outline-danger" title="Descargar PDF">
                                        <i class="bi bi-file-earmark-pdf"></i>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@if (showCancelModal)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar Cancelación</h5>
                    <button type="button" class="btn-close" @onclick="CloseCancelModal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>¿Está seguro de que desea cancelar este borrador de nota de crédito?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseCancelModal">Cerrar</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmCancel">Sí, Cancelar</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    private List<CreditNoteDto>? allCreditNotes;
    private string? errorMessage;

    private string searchTerm = string.Empty;
    private EstadoNotaDeCredito? selectedStatus;
    private bool userIsAdmin = false;

    private List<CreditNoteDto> FilteredCreditNotes
    {
        get
        {
            var filtered = allCreditNotes;

            if (filtered == null) return new List<CreditNoteDto>();

            // Filtro Estado
            if (selectedStatus.HasValue)
            {
                filtered = filtered.Where(n => n.Estado == selectedStatus.Value).ToList();
            }

            // Filtro Buscador Texto
            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                filtered = filtered.Where(n => 
                    n.NumeroNotaCredito.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                    n.NumeroFacturaModificada.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                    (n.ClienteNombre?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false)
                ).ToList();
            }

            return filtered;
        }
    }

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        userIsAdmin = authState.User.IsInRole("Administrador");
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            allCreditNotes = await CreditNoteService.GetCreditNotesAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar datos: {ex.Message}";
        }
    }

    private bool showCancelModal = false;
    private Guid? itemToCancelId;

    private void OpenCancelModal(Guid id)
    {
        itemToCancelId = id;
        showCancelModal = true;
    }

    private void CloseCancelModal()
    {
        itemToCancelId = null;
        showCancelModal = false;
    }

    private async Task ConfirmCancel()
    {
        if (itemToCancelId.HasValue)
        {
            try
            {
                await CreditNoteService.CancelCreditNoteAsync(itemToCancelId.Value);
                await LoadData();
            }
            catch (Exception ex)
            {
                errorMessage = ex.Message;
            }
        }
        CloseCancelModal();
    }

    private async Task ReactivateCreditNote(Guid id)
    {
        try
        {
            await CreditNoteService.ReactivateCancelledCreditNoteAsync(id);
            await LoadData();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }

    private RenderFragment GetStatusBadge(EstadoNotaDeCredito estado)
    {
        return builder =>
        {
            var (badgeClass, iconClass, text) = estado switch
            {
                EstadoNotaDeCredito.Autorizada => ("bg-success", "bi-check-circle-fill", "Autorizada"),
                EstadoNotaDeCredito.Pendiente => ("bg-warning text-dark", "bi-hourglass-split", "Pendiente"),
                EstadoNotaDeCredito.EnviadaSRI => ("bg-info text-dark", "bi-send", "Enviada SRI"),
                EstadoNotaDeCredito.Borrador => ("bg-warning text-dark", "bi-pencil-square", "Borrador"),
                EstadoNotaDeCredito.RechazadaSRI => ("bg-danger", "bi-x-circle-fill", "Rechazada"),
                EstadoNotaDeCredito.Cancelada => ("bg-secondary", "bi-trash", "Anulada"),
                _ => ("bg-secondary", "bi-question-circle", estado.ToString())
            };

            builder.OpenElement(0, "span");
            builder.AddAttribute(1, "class", $"badge {badgeClass}");
            
            builder.OpenElement(2, "i");
            builder.AddAttribute(3, "class", $"bi {iconClass} me-1");
            builder.CloseElement();
            
            builder.AddContent(4, text);
            builder.CloseElement();
        };
    }
}