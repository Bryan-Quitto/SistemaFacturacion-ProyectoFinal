@page "/"
@attribute [Authorize]
@using System.Net.Http.Json
@using FacturasSRI.Application.Dtos
@using FacturasSRI.Web.Services
@inject ApiClient ApiClient

<PageTitle>Panel Principal</PageTitle>

<div class="dashboard-header">
    <h1>Panel Principal</h1>
    <p>Bienvenido de nuevo, aquí tienes un resumen de tu actividad.</p>
</div>

@if (stats == null)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Cargando estadísticas...</span>
        </div>
        <p>Cargando estadísticas...</p>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <div class="card summary-card">
                <div class="card-body">
                    <div class="card-icon">
                        <i class="bi bi-file-earmark-text"></i>
                    </div>
                    <div class="card-content">
                        <h4>Facturas Emitidas</h4>
                        <p>@stats.TotalFacturasEmitidas</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card summary-card">
                <div class="card-body">
                    <div class="card-icon">
                        <i class="bi bi-people"></i>
                    </div>
                    <div class="card-content">
                        <h4>Clientes Registrados</h4>
                        <p>@stats.TotalClientesRegistrados</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card summary-card">
                <div class="card-body">
                    <div class="card-icon">
                        <i class="bi bi-cash-stack"></i>
                    </div>
                    <div class="card-content">
                        <h4>Ingresos del Mes</h4>
                        <p>0</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private DashboardStatsDto? stats;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var httpClient = await ApiClient.GetHttpClientAsync();
            stats = await httpClient.GetFromJsonAsync<DashboardStatsDto>("api/dashboard/stats");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar las estadísticas: {ex.Message}";
        }
    }
}