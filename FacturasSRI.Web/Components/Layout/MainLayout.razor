@using FacturasSRI.Web.Services
@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation
@inject ILogger<MainLayout> Logger

<div class="page @(isNavMenuCollapsed ? "nav-menu-collapsed" : "")">
    <AuthorizeView>
        <Authorized>
            <div class="sidebar">
                <NavMenu IsCollapsed="isNavMenuCollapsed" />
            </div>
        </Authorized>
    </AuthorizeView>

    <main class="main-content">
        <div class="top-bar">
            <button class="btn btn-link nav-menu-toggle" @onclick="ToggleNavMenu">
                <i class="bi @(isNavMenuCollapsed ? "bi-list" : "bi-list")"></i>
            </button>
            <AuthorizeView>
                <Authorized>
                    <div class="dropdown">
                        <a href="#" class="btn btn-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-fill me-2"></i>
                            Hola, @context.User.Identity?.Name
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="/profile">Mi Perfil</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><button class="dropdown-item" @onclick="HandleLogout">Cerrar Sesión</button></li>
                        </ul>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <a href="/login" class="btn btn-link">Iniciar Sesión</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>
        
        <article class="content px-4">
            <div class="container-fluid">
                
                <ErrorBoundary @ref="errorBoundary">
                    <ChildContent>
                        @Body
                    </ChildContent>
                    <ErrorContent Context="ex">
                        @{
                            Logger.LogError(ex, "ErrorBoundary capturó una excepción en la UI.");
                        }
                        <div class="alert alert-danger">
                            <h4>Ha ocurrido un error inesperado.</h4>
                            <p>Hemos registrado el error. Por favor, intenta recargar la página.</p>
                        </div>
                    </ErrorContent>
                </ErrorBoundary>

            </div>
        </article>
        
        <footer class="footer mt-auto py-3 bg-light">
            <div class="container-fluid text-center">
                <span class="text-muted">© @DateTime.Now.Year Aether Tecnologías. Todos los derechos reservados.</span>
            </div>
        </footer>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    Se ha producido un error no controlado.
    <a href="." class="reload">Recargando</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private ErrorBoundary? errorBoundary;
    private bool isNavMenuCollapsed = false;

    protected override void OnParametersSet()
    {
        errorBoundary?.Recover();
    }

    private void ToggleNavMenu()
    {
        isNavMenuCollapsed = !isNavMenuCollapsed;
    }

    private async Task HandleLogout()
    {
        var apiStateProvider = (ApiAuthenticationStateProvider)AuthenticationStateProvider;
        await apiStateProvider.MarkUserAsLoggedOut();
        Navigation.NavigateTo("/login", forceLoad: true);
    }
}